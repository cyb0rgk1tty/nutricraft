---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import ScrollAnimation from "../../../components/ScrollAnimation.astro";
import { brandedProducts, brandedCategories } from "../../../data/branded-products.js";

// Electrolytes product pages temporarily disabled
return Astro.redirect('/products');
---

<BaseLayout
  title={`${product.name} Electrolyte Drink Mix | White Label | Nutricraft Labs`}
  description={product.description}
>
  <Header />

  <!-- Hero -->
  <section class="bg-gradient-to-b from-mint-50 to-white py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <nav class="mb-6">
          <ol class="flex items-center space-x-2 text-sm text-dark-500">
            <li><a href="/products" class="hover:text-mint-600">Products</a></li>
            <li>/</li>
            <li><a href="/products/electrolytes" class="hover:text-mint-600">{category?.name}</a></li>
            <li>/</li>
            <li class="text-dark-900 font-medium">{product.name}</li>
          </ol>
        </nav>

        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Product Image -->
          {product.image && !product.image.includes('placeholder') ? (
            <picture>
              <source srcset={product.image} type="image/webp" />
              <source srcset={product.image.replace('.webp', '.jpg')} type="image/jpeg" />
              <img
                src={product.image.replace('.webp', '.jpg')}
                alt={product.name}
                class="rounded-2xl h-80 w-full object-cover"
                width="800"
                height="600"
              />
            </picture>
          ) : (
            <div class="bg-gradient-to-br from-mint-100 to-mint-200 rounded-2xl h-80 flex items-center justify-center">
              <svg class="w-24 h-24 text-mint-400 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714a2.25 2.25 0 00.659 1.591L19 14.5M14.25 3.104c.251.023.501.05.75.082M19 14.5l-2.47 2.47a2.25 2.25 0 01-1.591.659H9.061a2.25 2.25 0 01-1.591-.659L5 14.5m14 0V17a2.25 2.25 0 01-2.25 2.25H7.25A2.25 2.25 0 015 17v-2.5"></path>
              </svg>
            </div>
          )}

          <!-- Product info -->
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-dark-900 mb-4">
              {product.name}
            </h1>
            <p class="text-xl text-dark-600 mb-6">
              {product.description}
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/contact"
                class="inline-flex items-center justify-center px-8 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-colors duration-300"
              >
                Request Samples
              </a>
              <button
                data-cal-link="Nutricraftlabs"
                data-cal-config='{"theme":"light"}'
                class="inline-flex items-center justify-center px-8 py-4 bg-white text-mint-600 font-semibold rounded-lg border-2 border-mint-600 hover:bg-mint-50 transition-colors duration-300"
              >
                Schedule Call
              </button>
            </div>
          </div>
        </div>
      </ScrollAnimation>
    </div>
  </section>

  <!-- Key Ingredients -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <h2 class="text-3xl font-bold text-dark-900 mb-8 text-center">Key Ingredients</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 max-w-3xl mx-auto">
          {product.keyIngredients.map((ingredient) => (
            <div class="bg-gray-50 rounded-xl px-6 py-4 text-center">
              <p class="font-semibold text-dark-900">{ingredient}</p>
            </div>
          ))}
        </div>
      </ScrollAnimation>
    </div>
  </section>

  <!-- Flavors -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <h2 class="text-3xl font-bold text-dark-900 mb-8 text-center">Available Flavors</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-4xl mx-auto">
          {product.flavors.map((flavor) => (
            <div class="bg-white rounded-xl p-6 text-center shadow-md border border-gray-100">
              <p class="text-lg font-semibold text-dark-900">{flavor}</p>
            </div>
          ))}
        </div>
        <p class="text-center text-dark-500 mt-6 text-sm">
          Private label customers can customize flavors or create new profiles.
        </p>
      </ScrollAnimation>
    </div>
  </section>

  <!-- Product Details -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <h2 class="text-3xl font-bold text-dark-900 mb-8 text-center">Product Details</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-4xl mx-auto">
          <div class="bg-gray-50 rounded-xl p-6 text-center">
            <p class="text-sm text-dark-500 mb-1">Serving Size</p>
            <p class="text-lg font-semibold text-dark-900">{product.servingSize}</p>
          </div>
          <div class="bg-gray-50 rounded-xl p-6 text-center">
            <p class="text-sm text-dark-500 mb-1">Minimum Order</p>
            <p class="text-lg font-semibold text-dark-900">{product.moq}</p>
          </div>
          <div class="bg-gray-50 rounded-xl p-6 text-center">
            <p class="text-sm text-dark-500 mb-1">Lead Time</p>
            <p class="text-lg font-semibold text-dark-900">{product.leadTime}</p>
          </div>
          <div class="bg-gray-50 rounded-xl p-6 text-center">
            <p class="text-sm text-dark-500 mb-1">Price Range</p>
            <p class="text-lg font-semibold text-dark-900">{product.priceRange}</p>
          </div>
        </div>
        <p class="text-center text-dark-500 mt-6 text-sm">
          Pricing varies based on order quantity, packaging, and customization level.
        </p>
      </ScrollAnimation>
    </div>
  </section>

  <!-- WL/PL Options -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <h2 class="text-3xl font-bold text-dark-900 mb-12 text-center">Packaging Options</h2>
        <div class="grid md:grid-cols-2 gap-12 max-w-4xl mx-auto">
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="text-2xl font-semibold text-dark-900 mb-4">White Label</h3>
            <p class="text-dark-600 mb-4">
              Use this exact formulation with your brand name, logo, and label design. Ready to go with minimal lead time.
            </p>
            <p class="text-sm text-mint-700 font-medium">Starting at $8,000 - $12,000</p>
          </div>
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="text-2xl font-semibold text-dark-900 mb-4">Private Label</h3>
            <p class="text-dark-600 mb-4">
              Modify ingredients, adjust dosages, change flavors, or redesign the packaging. Make it fully your own.
            </p>
            <p class="text-sm text-mint-700 font-medium">Starting at $15,000 - $25,000</p>
          </div>
        </div>
      </ScrollAnimation>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-gradient-to-b from-white to-mint-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <ScrollAnimation animation="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-6">
          Interested in {product.name}?
        </h2>
        <p class="text-xl text-dark-600 mb-8">
          Get samples, a detailed spec sheet, and a custom quote for your brand.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-colors duration-300"
          >
            Get Started
          </a>
          <button
            data-cal-link="Nutricraftlabs"
            data-cal-config='{"theme":"light"}'
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-mint-600 font-semibold rounded-lg border-2 border-mint-600 hover:bg-mint-50 transition-colors duration-300"
          >
            Schedule Consultation
          </button>
        </div>
      </ScrollAnimation>
    </div>
  </section>

  <Footer />
</BaseLayout>
