---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import ScrollAnimation from "../../components/ScrollAnimation.astro";
import { brandedCategories } from "../../data/branded-products.js";
---

<BaseLayout
  title="Our Products | White Label & Private Label Formulations | Nutricraft Labs"
  description="Browse our ready-to-brand product lines including electrolyte drink mixes, supplements, and more. White label and private label options with 1,000-unit MOQ."
>
  <Header />

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-b from-mint-50 to-white py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation>
        <div class="text-center max-w-4xl mx-auto">
          <div class="inline-flex items-center gap-2 bg-mint-100 text-mint-800 px-4 py-2 rounded-full text-sm font-semibold mb-6">
            <span>Our Product Lines</span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
            Ready-to-Brand<br/>
            <span class="text-mint-600">Product Formulations.</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Launch your supplement brand faster with our stock formulations. Choose a product line, add your branding, and get to market with a 1,000-unit MOQ.
          </p>

          <!-- Value Props -->
          <div class="flex flex-wrap justify-center gap-4 mb-10">
            <div class="flex items-center gap-2 bg-mint-50 px-3 py-1 rounded-full">
              <svg class="w-5 h-5 text-mint-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700 font-medium text-sm">1,000 Unit MOQ</span>
            </div>
            <div class="flex items-center gap-2 bg-mint-50 px-3 py-1 rounded-full">
              <svg class="w-5 h-5 text-mint-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700 font-medium text-sm">White Label & Private Label</span>
            </div>
            <div class="flex items-center gap-2 bg-mint-50 px-3 py-1 rounded-full">
              <svg class="w-5 h-5 text-mint-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700 font-medium text-sm">GMP Certified</span>
            </div>
          </div>

          <!-- CTA -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
              Get Started
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            <a href="#product-lines" class="inline-flex items-center justify-center px-8 py-4 bg-white text-mint-600 font-semibold rounded-lg hover:bg-mint-50 transition-all duration-300 transform hover:scale-105 shadow-lg border-2 border-mint-600">
              Browse Product Lines
            </a>
          </div>
        </div>
      </ScrollAnimation>
    </div>
  </section>

  <!-- Product Lines - Alternating Cards -->
  <section id="product-lines" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation>
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Our Product Lines
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Stock formulations ready for your branding, or customize to create something unique
          </p>
        </div>
      </ScrollAnimation>

      <div class="space-y-16 md:space-y-24">
        {brandedCategories.map((category, index) => (
          <ScrollAnimation delay={100}>
            <div class={`flex flex-col ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'} items-center gap-8 md:gap-12 lg:gap-16`}>
              {/* Visual Side */}
              <div class="w-full md:w-1/2">
                <div class="relative">
                  {!category.comingSoon && category.image ? (
                    <picture>
                      <source
                        srcset={`${category.image.replace('-1200.webp', '-800.webp')} 800w, ${category.image} 1200w`}
                        type="image/webp"
                        sizes="(max-width: 768px) 100vw, 50vw"
                      />
                      <source
                        srcset={`${category.image.replace('-1200.webp', '-800.jpg')} 800w, ${category.image.replace('.webp', '.jpg')} 1200w`}
                        type="image/jpeg"
                        sizes="(max-width: 768px) 100vw, 50vw"
                      />
                      <img
                        src={category.image.replace('.webp', '.jpg')}
                        alt={category.name}
                        class="w-full aspect-[4/3] rounded-2xl shadow-lg object-cover"
                        loading="lazy"
                        width="1200"
                        height="900"
                      />
                    </picture>
                  ) : (
                    <div class="w-full aspect-[4/3] rounded-2xl shadow-lg overflow-hidden bg-gradient-to-br from-mint-100 to-mint-200 flex items-center justify-center">
                      <svg class="w-24 h-24 text-mint-400 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714a2.25 2.25 0 00.659 1.591L19 14.5M14.25 3.104c.251.023.501.05.75.082M19 14.5l-2.47 2.47a2.25 2.25 0 01-1.591.659H9.061a2.25 2.25 0 01-1.591-.659L5 14.5m14 0V17a2.25 2.25 0 01-2.25 2.25H7.25A2.25 2.25 0 015 17v-2.5"></path>
                      </svg>
                    </div>
                  )}
                  {/* Decorative elements */}
                  <div class={`absolute -bottom-4 ${index % 2 === 0 ? '-right-4' : '-left-4'} w-24 h-24 bg-mint-200 rounded-full opacity-50 -z-10`}></div>
                  <div class={`absolute -top-4 ${index % 2 === 0 ? '-left-4' : '-right-4'} w-16 h-16 bg-mint-300 rounded-full opacity-30 -z-10`}></div>
                </div>
              </div>

              {/* Content Side */}
              <div class="w-full md:w-1/2 space-y-6">
                <div class="flex items-center gap-3">
                  <h3 class="text-3xl md:text-4xl font-bold text-gray-900">{category.name}</h3>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-amber-100 text-amber-800">
                    Coming Soon
                  </span>
                </div>
                <p class="text-lg text-gray-600 leading-relaxed">{category.description}</p>

                {/* Highlights */}
                <ul class="space-y-3">
                  {category.highlights.map((highlight) => (
                    <li class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-mint-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-gray-700">{highlight}</span>
                    </li>
                  ))}
                </ul>

                <a
                  href="/contact"
                  class="inline-flex items-center justify-center px-6 py-3 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition-all duration-300"
                >
                  Coming Soon
                  <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                  </svg>
                </a>
              </div>
            </div>
          </ScrollAnimation>
        ))}
      </div>
    </div>
  </section>

  <!-- WL/PL Explanation -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation>
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Two Ways to Launch
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Every product line is available as white label or private label
          </p>
        </div>
        <div class="grid md:grid-cols-2 gap-12">
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="text-2xl font-semibold text-dark-900 mb-4">White Label</h3>
            <p class="text-dark-600">
              Choose from our stock formulations and add your branding. The fastest way to launch with lower upfront costs and a 1,000-unit MOQ.
            </p>
          </div>
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="text-2xl font-semibold text-dark-900 mb-4">Private Label</h3>
            <p class="text-dark-600">
              Customize any formulation to match your exact specs. Adjust ingredients, dosages, flavors, and packaging for a truly unique product.
            </p>
          </div>
        </div>
      </ScrollAnimation>
      <div class="text-center mt-8">
        <a href="/services/private-white-label-manufacturing" class="text-mint-600 hover:text-mint-700 font-medium underline">
          Learn more about white label vs private label
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-b from-white to-mint-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation>
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Don't See What You're Looking For?
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            We have more options to help you find the perfect fit for your brand.
          </p>
        </div>
      </ScrollAnimation>

      <ScrollAnimation delay={100}>
        <div class="grid md:grid-cols-2 gap-8 mb-10">
          <!-- Custom Formulation Card -->
          <div class="bg-white rounded-xl shadow-lg p-8 flex flex-col">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714a2.25 2.25 0 00.659 1.591L19 14.5M14.25 3.104c.251.023.501.05.75.082M19 14.5l-2.47 2.47a2.25 2.25 0 01-1.591.659H9.061a2.25 2.25 0 01-1.591-.659L5 14.5m14 0V17a2.25 2.25 0 01-2.25 2.25H7.25A2.25 2.25 0 015 17v-2.5"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900">Custom Formulation</h3>
            </div>
            <p class="text-gray-600 mb-6 flex-grow">
              Bring your unique formula to life. Our R&D team works with you from concept to finished product, handling formulation, sourcing, and manufacturing.
            </p>
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-6 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-all duration-300 transform hover:scale-105 shadow-md"
            >
              Request Custom Formulation
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>

          <!-- Partner Catalog Card -->
          <div class="bg-white rounded-xl shadow-lg p-8 flex flex-col">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900">Partner Catalog Access</h3>
            </div>
            <p class="text-gray-600 mb-4 flex-grow">
              Explore 200+ additional ready-to-brand formulations from our vetted manufacturing partners. Our team will help match you with the right products for your brand.
            </p>
            <p class="text-sm text-gray-500 mb-6">
              Pricing and availability provided during consultation
            </p>
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-6 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-all duration-300 transform hover:scale-105 shadow-md"
            >
              Request Catalog Access
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
      </ScrollAnimation>

      <!-- Schedule Consultation -->
      <ScrollAnimation delay={200}>
        <div class="text-center">
          <p class="text-gray-600 mb-4">Not sure which option is right for you?</p>
          <button
            data-cal-link="Nutricraftlabs"
            data-cal-config='{"theme":"light"}'
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-mint-600 font-semibold rounded-lg border-2 border-mint-600 hover:bg-mint-50 transition-all duration-300 transform hover:scale-105 shadow-lg"
          >
            Schedule a Free Consultation
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </button>
        </div>
      </ScrollAnimation>
    </div>
  </section>

  <Footer />
</BaseLayout>
