---
import BaseLayout from '../layouts/BaseLayout.astro';
import CountUp from '../components/CountUp.astro';
---

<BaseLayout title="CountUp Component Demo">
  <main class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-8">CountUp Component Demo</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Basic counter -->
      <div class="bg-gray-100 p-6 rounded-lg text-center">
        <h3 class="text-lg font-semibold mb-2">Basic Counter</h3>
        <div class="text-3xl font-bold text-blue-600">
          <CountUp end={1234} />
        </div>
      </div>
      
      <!-- With prefix (currency) -->
      <div class="bg-gray-100 p-6 rounded-lg text-center">
        <h3 class="text-lg font-semibold mb-2">Currency</h3>
        <div class="text-3xl font-bold text-green-600">
          <CountUp end={49999} prefix="$" />
        </div>
      </div>
      
      <!-- With suffix (percentage) -->
      <div class="bg-gray-100 p-6 rounded-lg text-center">
        <h3 class="text-lg font-semibold mb-2">Percentage</h3>
        <div class="text-3xl font-bold text-purple-600">
          <CountUp end={95} suffix="%" />
        </div>
      </div>
      
      <!-- With decimals -->
      <div class="bg-gray-100 p-6 rounded-lg text-center">
        <h3 class="text-lg font-semibold mb-2">With Decimals</h3>
        <div class="text-3xl font-bold text-red-600">
          <CountUp end={3.14159} decimals={3} />
        </div>
      </div>
      
      <!-- Large number with custom duration -->
      <div class="bg-gray-100 p-6 rounded-lg text-center">
        <h3 class="text-lg font-semibold mb-2">Large Number (3s duration)</h3>
        <div class="text-3xl font-bold text-indigo-600">
          <CountUp end={1000000} duration={3000} suffix="+" />
        </div>
      </div>
      
      <!-- Complex example -->
      <div class="bg-gray-100 p-6 rounded-lg text-center">
        <h3 class="text-lg font-semibold mb-2">Complex Example</h3>
        <div class="text-3xl font-bold text-orange-600">
          <CountUp end={24.99} prefix="$" suffix="/mo" decimals={2} duration={2500} />
        </div>
      </div>
    </div>
    
    <!-- Manufacturing Statistics Example -->
    <div class="mt-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Manufacturing Statistics Example</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-4xl font-bold text-blue-600 mb-2">
            <CountUp end={500} suffix="+" />
          </div>
          <p class="text-gray-600">Happy Clients</p>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-green-600 mb-2">
            <CountUp end={1000000} suffix="+" />
          </div>
          <p class="text-gray-600">Units Produced</p>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-purple-600 mb-2">
            <CountUp end={99.9} suffix="%" decimals={1} />
          </div>
          <p class="text-gray-600">Quality Rate</p>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-orange-600 mb-2">
            <CountUp end={15} />
          </div>
          <p class="text-gray-600">Years Experience</p>
        </div>
      </div>
    </div>
    
    <!-- Scroll down to see animation trigger -->
    <div class="mt-32 mb-16 text-center text-gray-500">
      <p>Scroll down to see animations trigger on viewport entry...</p>
    </div>
    
    <!-- Late-loading counters -->
    <div class="mt-32 grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-blue-50 p-8 rounded-lg text-center">
        <h3 class="text-lg font-semibold mb-4">Customer Satisfaction</h3>
        <div class="text-5xl font-bold text-blue-700">
          <CountUp end={98.5} suffix="%" decimals={1} duration={2500} />
        </div>
      </div>
      <div class="bg-green-50 p-8 rounded-lg text-center">
        <h3 class="text-lg font-semibold mb-4">Cost Savings</h3>
        <div class="text-5xl font-bold text-green-700">
          <CountUp end={250000} prefix="$" duration={3000} />
        </div>
      </div>
      <div class="bg-purple-50 p-8 rounded-lg text-center">
        <h3 class="text-lg font-semibold mb-4">Global Reach</h3>
        <div class="text-5xl font-bold text-purple-700">
          <CountUp end={45} suffix="+" duration={2000} />
        </div>
        <p class="text-gray-600 mt-2">Countries Served</p>
      </div>
    </div>
  </main>
</BaseLayout>