---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ServiceCard from "../components/ServiceCard.astro";
import TestimonialCard from "../components/TestimonialCard.astro";
// Calculator components temporarily disabled
// import MOQCalculator from "../components/MOQCalculator.astro";
// import LeadTimeEstimator from "../components/LeadTimeEstimator.astro";
// import CostSavingsCalculator from "../components/CostSavingsCalculator.astro";
import ScrollAnimation from "../components/ScrollAnimation.astro";
import CountUp from "../components/CountUp.astro";
import FAQ from "../components/FAQ.astro";
import FormulationImage from "../components/FormulationImage.astro";
import TextRotator from "../components/TextRotator.astro";
import { services } from "../data/services.js";
import { testimonials } from "../data/testimonials.js";
import { formulations } from "../data/formulations.js";
---

<BaseLayout>
  <Fragment slot="head">
    <!-- Preload hero image for better LCP (mobile only to save bandwidth) -->
    <link rel="preload" as="image" href="/images/nutricraftbottle-500.webp" type="image/webp" media="(max-width: 768px)" />
    <link rel="preload" as="image" href="/images/nutricraftbottle-500.webp" type="image/webp" media="(min-width: 769px)" />
  </Fragment>
  
  <Header />

  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-b from-mint-50 to-white overflow-hidden"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Hero Text -->
        <div class="space-y-6">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-dark-900 leading-tight"
          >
            <TextRotator words={["Launch", "Grow", "Expand"]} class="text-mint-600" /> Your Supplement Brand <span class="text-mint-600">3x Faster</span> & Save 40% on Costs
          </h1>
          
          <!-- Trust Indicators moved up -->
          <div class="flex flex-wrap gap-4 items-center">
            <div class="flex items-center gap-2 bg-mint-50 px-3 py-1 rounded-full">
              <svg class="w-5 h-5 text-mint-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-dark-700 font-medium text-sm">GMP Certified Partners</span>
            </div>
            <div class="flex items-center gap-2 bg-mint-50 px-3 py-1 rounded-full">
              <svg class="w-5 h-5 text-mint-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-dark-700 font-medium text-sm">FDA & Health Canada Compliant</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-dark-700 font-bold text-lg">20+ Brands Launched</span>
            </div>
          </div>
          
          <p class="text-xl text-dark-600 leading-relaxed">
            Skip the complexity of finding reliable manufacturers. We connect you with pre-vetted GMP partners and handle all compliance from formulation to market ready products.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-8 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
              aria-label="Get started with free consultation"
            >
              Get Started Free
              <svg
                class="ml-2 w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            <button
              data-cal-link="team/nutricraftlabs/discovery"
              data-cal-config='{"theme":"light"}'
              class="inline-flex items-center justify-center px-8 py-4 bg-white text-mint-600 font-semibold rounded-lg border-2 border-mint-600 hover:bg-mint-50 transition-colors duration-300"
              aria-label="Schedule discovery call"
            >
              Schedule Call
              <svg
                class="ml-2 w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </button>
          </div>

          <!-- Additional Trust Elements -->
          <div class="pt-4 border-t border-gray-200">
            <p class="text-sm text-dark-600">
              <span class="font-semibold">✓ No upfront fees</span> • 
              <span class="font-semibold">✓ Free consultations</span> • 
              <span class="font-semibold">✓ Response within 24 hours</span>
            </p>
          </div>
        </div>

        <!-- Hero Image/Animation Placeholder -->
        <div class="relative">
          <div class="rounded-3xl p-8 md:p-12">
            <div
              class="aspect-square rounded-2xl overflow-hidden flex items-center justify-center"
            >
              <picture>
                <!-- Mobile: Use 500px image only -->
                <source
                  media="(max-width: 768px)"
                  srcset="/images/nutricraftbottle-500.webp"
                  type="image/webp"
                />
                <source
                  media="(max-width: 768px)"
                  srcset="/images/nutricraftbottle-500.png"
                  type="image/png"
                />
                <!-- Desktop: Use responsive images -->
                <source
                  media="(min-width: 769px)"
                  srcset="/images/nutricraftbottle-500.webp 1x, /images/nutricraftbottle-1000.webp 2x"
                  type="image/webp"
                />
                <img
                  src="/images/nutricraftbottle-500.png"
                  srcset="/images/nutricraftbottle-500.png 1x, /images/nutricraftbottle-1000.png 2x"
                  alt="Nutricraft Labs Supplement Bottle"
                  class="w-full h-full object-contain"
                  loading="eager"
                  width="500"
                  height="500"
                  fetchpriority="high"
                  decoding="sync"
                />
              </picture>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar Section -->
  <section class="py-12 bg-white border-y border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12">
        <div class="text-center">
          <p class="text-3xl font-bold text-mint-600"><CountUp end={20} suffix="+" duration={2} /></p>
          <p class="text-sm text-dark-600 font-medium">Brands Launched</p>
        </div>
        <div class="text-center">
          <p class="text-3xl font-bold text-mint-600"><CountUp end={15} suffix="+" duration={2} /></p>
          <p class="text-sm text-dark-600 font-medium">GMP Partners</p>
        </div>
        <div class="text-center">
          <p class="text-3xl font-bold text-mint-600"><CountUp end={100} suffix="%" duration={2} /></p>
          <p class="text-sm text-dark-600 font-medium">Satisfaction Rate</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pain Points & Solutions Section -->
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-4">
            Stop Struggling with Supplement Manufacturing
          </h2>
          <p class="text-xl text-dark-600 max-w-3xl mx-auto">
            We solve the biggest challenges brands face when launching supplements
          </p>
        </div>
      </ScrollAnimation>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <ScrollAnimation animation="fade-up" delay={100}>
          <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 h-full flex flex-col">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-dark-900 mb-3">
              Finding Reliable Manufacturers
            </h3>
            <p class="text-dark-600 mb-4 flex-grow">
              Hours wasted vetting manufacturers, only to discover hidden fees, quality issues, or compliance problems.
            </p>
            <div class="flex items-center text-mint-600 font-medium mt-auto">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Pre-vert partners
            </div>
          </div>
        </ScrollAnimation>

        <ScrollAnimation animation="fade-up" delay={200}>
          <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 h-full flex flex-col">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-dark-900 mb-3">
              Regulatory Compliance
            </h3>
            <p class="text-dark-600 mb-4 flex-grow">
              Complex FDA and Health Canada regulations that can delay launches or result in costly penalties.
            </p>
            <div class="flex items-center text-mint-600 font-medium mt-auto">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              100% compliant
            </div>
          </div>
        </ScrollAnimation>

        <ScrollAnimation animation="fade-up" delay={300}>
          <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 h-full flex flex-col">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-dark-900 mb-3">
              Hidden Costs & Delays
            </h3>
            <p class="text-dark-600 mb-4 flex-grow">
              Unexpected fees, minimum order changes, and production delays that destroy budgets and timelines.
            </p>
            <div class="flex items-center text-mint-600 font-medium mt-auto">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Transparent pricing
            </div>
          </div>
        </ScrollAnimation>

        <ScrollAnimation animation="fade-up" delay={400}>
          <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 h-full flex flex-col">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-dark-900 mb-3">
              High Minimum Orders
            </h3>
            <p class="text-dark-600 mb-4 flex-grow">
              Many manufacturers require 10,000+ unit minimums, making it impossible for startups and small businesses to get started.
            </p>
            <div class="flex items-center text-mint-600 font-medium mt-auto">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Start with just 500 units
            </div>
          </div>
        </ScrollAnimation>
      </div>

      <!-- CTA after pain points -->
      <ScrollAnimation animation="fade-up" delay={500}>
        <div class="text-center mt-12">
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-all duration-300 transform hover:scale-105"
          >
            Get Started
            <svg
              class="ml-2 w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              ></path>
            </svg>
          </a>
        </div>
      </ScrollAnimation>
    </div>
  </section>

  <!-- Popular Supplement Formulations Section -->
  <section id="formulations" class="py-20 bg-gradient-to-b from-white to-mint-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-4">
            Popular Supplement Formulations
          </h2>
          <p class="text-xl text-dark-600 max-w-3xl mx-auto">
            Choose from six premium delivery formats, each optimized for specific nutrients 
            and consumer preferences. Click any format to learn more.
          </p>
        </div>
      </ScrollAnimation>

      <!-- Formulation Cards Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          formulations.map((formulation, index) => (
            <ScrollAnimation animation="fade-up" delay={index * 100}>
              <a
                href={`/formulations/${formulation.slug}`}
                class="group relative bg-white rounded-xl shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 h-full flex flex-col overflow-hidden"
              >
                <!-- Image Container - Edge to Edge -->
                <div class="relative w-full h-48 overflow-hidden bg-gradient-to-br from-mint-100 to-mint-200">
                  <FormulationImage
                    formulation={formulation}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                    sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  />
                </div>
                
                <!-- Content Container with Padding -->
                <div class="p-8 flex flex-col flex-grow">
                  <!-- Content -->
                  <h3 class="text-2xl font-semibold text-dark-900 mb-3 group-hover:text-mint-600 transition-colors duration-300">
                    {formulation.name}
                  </h3>
                  <p class="text-dark-600 mb-4 flex-grow">
                    {formulation.tagline}
                  </p>
                  
                  <!-- Best For Pills -->
                  <div class="flex flex-wrap gap-2 mb-4">
                    {formulation.bestFor.slice(0, 3).map((item) => (
                      <span class="text-xs bg-gray-100 text-gray-700 px-3 py-1 rounded-full">
                        {item}
                      </span>
                    ))}
                  </div>
                </div>
              </a>
            </ScrollAnimation>
          ))
        }
      </div>

      <!-- CTA Section -->
      <ScrollAnimation animation="fade-up" delay={600}>
        <div class="mt-16 bg-white rounded-2xl p-12 shadow-lg text-center">
          <h3 class="text-2xl md:text-3xl font-bold text-dark-900 mb-4">
            Need Something Specific?
          </h3>
          <p class="text-lg text-dark-600 mb-8 max-w-2xl mx-auto">
            Our team specializes in custom formulations and unique delivery methods. 
            Let's discuss how we can bring your vision to life.
          </p>
          <a
            href="/contact"
            class="inline-flex items-center px-8 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-colors duration-200"
          >
            Request Free Consultation
            <svg
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              ></path>
            </svg>
          </a>
        </div>
      </ScrollAnimation>
    </div>
  </section>

  <!-- Ordering Process Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-4">
            Our Simple Ordering Process
          </h2>
          <p class="text-xl text-dark-600 max-w-3xl mx-auto">
            Getting started with your private label supplements is easy. 
            We guide you through every step of the journey.
          </p>
        </div>
      </ScrollAnimation>

      <!-- 3-Step Process Grid -->
      <div class="grid md:grid-cols-3 gap-8 items-stretch">
        <!-- Step 1: Understanding your needs -->
        <ScrollAnimation animation="fade-up" delay={0}>
          <div class="relative bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 h-full flex flex-col">
            <!-- Step Number -->
            <div class="absolute -top-4 -left-4 w-12 h-12 bg-mint-600 text-white rounded-full flex items-center justify-center font-bold text-lg">
              1
            </div>
            
            <!-- Icon -->
            <div class="w-16 h-16 bg-mint-100 rounded-lg flex items-center justify-center mb-6 mt-2">
              <svg
                class="w-8 h-8 text-mint-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
                ></path>
              </svg>
            </div>
            
            <h3 class="text-2xl font-semibold text-dark-900 mb-4">
              Understanding Your Needs
            </h3>
            <p class="text-dark-600 leading-relaxed">
              We begin with a detailed consultation to understand your vision, 
              target market, and specific requirements. Our experts help refine 
              your concept and identify the best formulation approach.
            </p>
          </div>
        </ScrollAnimation>

        <!-- Step 2: Demo Order -->
        <ScrollAnimation animation="fade-up" delay={100}>
          <div class="relative bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 h-full flex flex-col">
            <!-- Step Number -->
            <div class="absolute -top-4 -left-4 w-12 h-12 bg-mint-600 text-white rounded-full flex items-center justify-center font-bold text-lg">
              2
            </div>
            
            <!-- Icon -->
            <div class="w-16 h-16 bg-mint-100 rounded-lg flex items-center justify-center mb-6 mt-2">
              <svg
                class="w-8 h-8 text-mint-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
                ></path>
              </svg>
            </div>
            
            <h3 class="text-2xl font-semibold text-dark-900 mb-4">
              Sample Order
            </h3>
            <p class="text-dark-600 leading-relaxed">
              Start with a small batch to test your product. This allows you 
              to evaluate quality, gather feedback, and make adjustments before 
              scaling up production.
            </p>
          </div>
        </ScrollAnimation>

        <!-- Step 3: Complete Full Order -->
        <ScrollAnimation animation="fade-up" delay={200}>
          <div class="relative bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 h-full flex flex-col">
            <!-- Step Number -->
            <div class="absolute -top-4 -left-4 w-12 h-12 bg-mint-600 text-white rounded-full flex items-center justify-center font-bold text-lg">
              3
            </div>
            
            <!-- Icon -->
            <div class="w-16 h-16 bg-mint-100 rounded-lg flex items-center justify-center mb-6 mt-2">
              <svg
                class="w-8 h-8 text-mint-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                ></path>
              </svg>
            </div>
            
            <h3 class="text-2xl font-semibold text-dark-900 mb-4">
              Complete Full Order
            </h3>
            <p class="text-dark-600 leading-relaxed">
              Once you're satisfied with the demo, we move to full-scale 
              production. We handle everything from manufacturing to packaging, 
              ensuring your products meet all regulatory requirements.
            </p>
          </div>
        </ScrollAnimation>
      </div>

      <!-- CTA Button -->
      <ScrollAnimation animation="fade-up" delay={300}>
        <div class="text-center mt-12">
          <a
