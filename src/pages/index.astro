---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ServiceCard from "../components/ServiceCard.astro";
import TestimonialCard from "../components/TestimonialCard.astro";
import MOQCalculator from "../components/MOQCalculator.astro";
import LeadTimeEstimator from "../components/LeadTimeEstimator.astro";
import CostSavingsCalculator from "../components/CostSavingsCalculator.astro";
import ProductShowcase from "../components/ProductShowcase.astro";
import ScrollAnimation from "../components/ScrollAnimation.astro";
import CountUp from "../components/CountUp.astro";
import FAQ from "../components/FAQ.astro";
import { services } from "../data/services.js";
import { testimonials } from "../data/testimonials.js";
---

<BaseLayout>
  <Fragment slot="head">
    <!-- Preload hero image for better LCP (mobile only to save bandwidth) -->
    <link rel="preload" as="image" href="/images/thewellnessdropbottle-500.webp" type="image/webp" media="(max-width: 768px)" />
    <link rel="preload" as="image" href="/images/thewellnessdropbottle-500.webp" type="image/webp" media="(min-width: 769px)" />
  </Fragment>
  
  <Header />

  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-b from-mint-50 to-white overflow-hidden"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Hero Text -->
        <div class="space-y-6">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-dark-900 leading-tight"
          >
            Your Partner for Private-Label Supplements & Compliance in North
            America
          </h1>
          <p class="text-xl text-dark-600 leading-relaxed">
            From concept to compliant label, we manage sourcing, formulation,
            and manufacturing through our vetted GMP partners.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-8 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-colors duration-300"
              aria-label="Start your supplement project with The Wellness Drop"
            >
              Start Your Project
              <svg
                class="ml-2 w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            <a
              href="#services"
              class="inline-flex items-center justify-center px-8 py-4 bg-white text-mint-600 font-semibold rounded-lg border-2 border-mint-600 hover:bg-mint-50 transition-colors duration-300"
              aria-label="Explore our supplement manufacturing services"
            >
              Explore Services
            </a>
          </div>

          <!-- Trust Badges -->
          <div class="flex flex-wrap gap-6 pt-6">
            <div class="flex items-center gap-2">
              <svg
                class="w-6 h-6 text-mint-600"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-dark-700 font-medium">GMP Partner Network</span>
            </div>
            <div class="flex items-center gap-2">
              <svg
                class="w-6 h-6 text-mint-600"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-dark-700 font-medium"
                >FDA Registered Partners</span
              >
            </div>
            <div class="flex items-center gap-2">
              <svg
                class="w-6 h-6 text-mint-600"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-dark-700 font-medium"
                >Health Canada Compliant</span
              >
            </div>
          </div>
        </div>

        <!-- Hero Image/Animation Placeholder -->
        <div class="relative">
          <div class="rounded-3xl p-8 md:p-12">
            <div
              class="aspect-square rounded-2xl overflow-hidden flex items-center justify-center"
            >
              <picture>
                <!-- Mobile: Use 500px image only -->
                <source
                  media="(max-width: 768px)"
                  srcset="/images/thewellnessdropbottle-500.webp"
                  type="image/webp"
                />
                <source
                  media="(max-width: 768px)"
                  srcset="/images/thewellnessdropbottle-500.png"
                  type="image/png"
                />
                <!-- Desktop: Use responsive images -->
                <source
                  media="(min-width: 769px)"
                  srcset="/images/thewellnessdropbottle-500.webp 1x, /images/thewellnessdropbottle-1000.webp 2x"
                  type="image/webp"
                />
                <img
                  src="/images/thewellnessdropbottle-500.png"
                  srcset="/images/thewellnessdropbottle-500.png"
                  alt="The Wellness Drop Supplement Bottle"
                  class="w-full h-full object-contain"
                  loading="eager"
                  width="500"
                  height="500"
                  fetchpriority="high"
                  decoding="sync"
                />
              </picture>
            </div>
          </div>
          <!-- Decorative elements -->
          <div
            class="absolute -top-4 -right-4 w-24 h-24 bg-mint-200 rounded-full opacity-20"
          >
          </div>
          <div
            class="absolute -bottom-6 -left-6 w-32 h-32 bg-mint-300 rounded-full opacity-20"
          >
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-4">
            Comprehensive Supplement Solutions
          </h2>
          <p class="text-xl text-dark-600 max-w-3xl mx-auto">
            End-to-end services to transform your supplement ideas into
            market-ready products
          </p>
        </div>
      </ScrollAnimation>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 items-stretch">
        {
          services.map((service, index) => (
            <ScrollAnimation
              animation="fade-up"
              delay={index * 100}
            >
              <ServiceCard service={service} />
            </ScrollAnimation>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Manufacturing Capabilities Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-6">
            Access to World-Class Manufacturing
          </h2>
          <p class="text-lg text-dark-600 mb-8">
            Partner with the same trusted manufacturers used by leading supplement brands. 
            We connect you with industry-certified facilities that produce for major 
            retail chains and established brands.
          </p>

          <div class="space-y-6">
            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-mint-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-dark-900 mb-2">
                  Diverse Product Formats
                </h3>
                <p class="text-dark-600">
                  Capsules, tablets, powders, liquids, gummies, and more. Our
                  partner network can produce any format you need.
                </p>
              </div>
            </div>

            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-mint-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-dark-900 mb-2">
                  Scalable Production
                </h3>
                <p class="text-dark-600">
                  From small pilot runs to large-scale production, our partners
                  scale with your business growth.
                </p>
              </div>
            </div>

            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-mint-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-dark-900 mb-2">
                  Fast Turnaround
                </h3>
                <p class="text-dark-600">
                  Our efficient partner network and streamlined processes ensure
                  your products reach market quickly.
                </p>
              </div>
            </div>

            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-mint-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4M7 12l2 2 4-4m0 0l2 2 4-4M5 10l2 2 4-4 4 4 2-2"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-dark-900 mb-2">
                  Trusted by Major Brands
                </h3>
                <p class="text-dark-600">
                  Work with the exact same manufacturers that produce supplements for 
                  recognized brands in major retail chains like Walmart, CVS, and GNC.
                </p>
              </div>
            </div>

            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-mint-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-dark-900 mb-2">
                  Rigorous Quality Control
                </h3>
                <p class="text-dark-600">
                  Multi-stage testing protocols, batch certifications, and third-party 
                  verification ensure consistent quality that meets or exceeds industry standards.
                </p>
              </div>
            </div>

            <div class="flex gap-4">
              <div
                class="flex-shrink-0 w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-mint-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-dark-900 mb-2">
                  State-of-the-Art Facilities
                </h3>
                <p class="text-dark-600">
                  Access climate-controlled environments, advanced encapsulation technology, 
                  and automated packaging lines that ensure precision and efficiency.
                </p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Certifications Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-4">
            Partner Certifications
          </h2>
          <p class="text-xl text-dark-600">
            Held by select partners, verified during vendor onboarding
          </p>
        </div>
      </ScrollAnimation>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <ScrollAnimation animation="scale-in" delay={100}>
          <div
            class="bg-gray-50 rounded-xl p-6 text-center hover:bg-mint-50 transition-colors duration-300"
          >
            <div
              class="w-20 h-20 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <span class="text-2xl font-bold text-mint-600">GMP</span>
            </div>
            <h3 class="font-semibold text-dark-900">GMP Certified</h3>
            <p class="text-sm text-dark-600 mt-2">
              Good Manufacturing Practices
            </p>
          </div>
        </ScrollAnimation>

        <ScrollAnimation animation="scale-in" delay={200}>
          <div
            class="bg-gray-50 rounded-xl p-6 text-center hover:bg-mint-50 transition-colors duration-300"
          >
            <div
              class="w-20 h-20 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <span class="text-2xl font-bold text-mint-600">FDA</span>
            </div>
            <h3 class="font-semibold text-dark-900">FDA Registered</h3>
            <p class="text-sm text-dark-600 mt-2">US FDA Compliance</p>
          </div>
        </ScrollAnimation>

        <ScrollAnimation animation="scale-in" delay={300}>
          <div
            class="bg-gray-50 rounded-xl p-6 text-center hover:bg-mint-50 transition-colors duration-300"
          >
            <div
              class="w-20 h-20 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <span class="text-2xl font-bold text-mint-600">ISO</span>
            </div>
            <h3 class="font-semibold text-dark-900">ISO 9001:2015</h3>
            <p class="text-sm text-dark-600 mt-2">Quality Management</p>
          </div>
        </ScrollAnimation>

        <ScrollAnimation animation="scale-in" delay={400}>
          <div
            class="bg-gray-50 rounded-xl p-6 text-center hover:bg-mint-50 transition-colors duration-300"
          >
            <div
              class="w-20 h-20 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <span class="text-2xl font-bold text-mint-600">NSF</span>
            </div>
            <h3 class="font-semibold text-dark-900">NSF Certified</h3>
            <p class="text-sm text-dark-600 mt-2">Third-Party Verified</p>
          </div>
        </ScrollAnimation>
      </div>
    </div>
  </section>

  <!-- About Us Section -->
  <section id="about" class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-6">
            Your Trusted Partner in Supplement Success
          </h2>
          <div class="space-y-4 text-lg text-dark-600">
            <p>
              The Wellness Drop was founded to bridge the gap between ambitious
              supplement brands and reliable manufacturing partners. We've built
              our reputation on transparency, regulatory expertise, and
              unwavering support for our clients' success.
            </p>
            <p>
              Our team's decades of industry experience and extensive partner
              network enable us to match you with the perfect manufacturing
              solution. We've facilitated hundreds of successful product
              launches for brands entering the North American market.
            </p>
            <p>
              What sets us apart is our agency model – we work for you, not the
              manufacturers. This ensures unbiased recommendations and the best
              possible terms for your business.
            </p>
          </div>

          <div class="grid grid-cols-2 gap-6 mt-8">
            <ScrollAnimation animation="fade-up" delay={100}>
              <div>
                <div class="text-3xl font-bold text-mint-600">
                  <CountUp end={15} suffix="+" duration={2} />
                </div>
                <p class="text-dark-700 font-medium">Combined Years of Experience</p>
              </div>
            </ScrollAnimation>
            <ScrollAnimation animation="fade-up" delay={200}>
              <div>
                <div class="text-3xl font-bold text-mint-600">
                  <CountUp end={20} suffix="+" duration={2} />
                </div>
                <p class="text-dark-700 font-medium">Brands Launched</p>
              </div>
            </ScrollAnimation>
          </div>
        </div>

        <div class="bg-mint-100 rounded-3xl p-8 lg:p-12">
          <div
            class="aspect-square bg-gradient-to-br from-mint-200 to-mint-300 rounded-2xl flex items-center justify-center"
          >
            <!-- Replace with actual image: <img src="/images/team-photo.jpg" alt="The Wellness Drop team" loading="lazy" width="600" height="600" class="w-full h-full object-cover rounded-2xl" /> -->
            <p class="text-mint-700 text-lg font-medium">
              Team Photo Placeholder
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Nutricraft Labs Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ScrollAnimation animation="fade-up">
        <h2
          class="text-3xl md:text-4xl font-bold text-dark-900 text-center mb-12"
        >
          Why Brands Choose The Wellness Drop
        </h2>
      </ScrollAnimation>

      <div class="grid md:grid-cols-3 gap-8">
        <ScrollAnimation animation="fade-left" delay={100}>
          <div class="text-center">
            <div
              class="w-16 h-16 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-mint-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-dark-900 mb-3">
              Transparent Pricing
            </h3>
            <p class="text-dark-600">
              No hidden fees or surprises. Get clear, competitive quotes with
              detailed breakdowns for every aspect of your project.
            </p>
          </div>
        </ScrollAnimation>

        <ScrollAnimation animation="fade-up" delay={200}>
          <div class="text-center">
            <div
              class="w-16 h-16 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-mint-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-dark-900 mb-3">
              Speed to Market
            </h3>
            <p class="text-dark-600">
              Launch faster with streamlined processes. From formulation to
              fulfillment, we optimize every step to get your products to market
              quickly.
            </p>
          </div>
        </ScrollAnimation>

        <ScrollAnimation animation="fade-right" delay={300}>
          <div class="text-center">
            <div
              class="w-16 h-16 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-mint-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-dark-900 mb-3">
              Dedicated Support
            </h3>
            <p class="text-dark-600">
              Your success is our priority. Get personalized guidance from
              industry experts who understand your business goals.
            </p>
          </div>
        </ScrollAnimation>
      </div>

      <div class="grid md:grid-cols-3 gap-8 mt-12">
        <ScrollAnimation animation="fade-right" delay={100}>
          <div class="text-center">
            <div
              class="w-16 h-16 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-mint-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
