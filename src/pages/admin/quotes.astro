---
/**
 * Manufacturer Dashboard - Quote Management
 * Username/password protected admin page for tracking and pricing quote requests from Twenty CRM
 * Supports English and Chinese languages
 *
 * Now uses React components with TanStack Query for data fetching and Zustand for state management.
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import LanguageSelector from '../../components/admin/LanguageSelector.astro';
import { AdminDashboard } from '../../components/react/admin';
import { verifySession } from '../../utils/adminAuth';

// Check if user is already authenticated via cookie
const authResult = await verifySession(Astro.request);
const isAuthenticated = !!authResult;
const isAdmin = authResult?.user?.username === 'nutricraftadmin';

// SEO metadata
const title = 'Manufacture Dashboard | Nutricraft Labs';
const description = 'Internal dashboard for managing manufacturer price quotes';
---

<BaseLayout title={title} description={description} noindex={true} noChat={true}>
  <!-- Login Gate -->
  <div id="login-gate" class:list={["min-h-[calc(100vh-5rem)] bg-gradient-to-br from-mint-50 via-white to-primary/5 flex items-center justify-center py-16", { "hidden": isAuthenticated }]}>
    <div class="max-w-md mx-auto px-4 sm:px-6 text-center relative">
      <!-- Language Selector -->
      <div class="absolute -top-8 right-0">
        <LanguageSelector />
      </div>
      <!-- Lock Icon -->
      <div class="w-20 h-20 bg-gradient-to-br from-primary to-mint-500 rounded-2xl flex items-center justify-center mx-auto mb-8 shadow-lg shadow-primary/30">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
      </div>

      <h1 id="gate-title" class="text-3xl md:text-4xl font-bold text-gray-900 mb-3" data-i18n="pageTitle">Manufacture Dashboard</h1>
      <p id="gate-subtitle" class="text-lg text-gray-600 mb-8" data-i18n="enterCredentials">Enter your credentials to continue</p>

      <form id="login-form" class="space-y-4">
        <!-- Username Field -->
        <div>
          <input
            type="text"
            id="username-input"
            data-i18n-placeholder="usernamePlaceholder"
            placeholder="Username"
            autocomplete="username"
            class="w-full px-4 py-4 rounded-xl border border-gray-300 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-colors duration-300 text-center text-lg"
          />
        </div>

        <!-- Password Field -->
        <div class="relative">
          <input
            type="password"
            id="password-input"
            data-i18n-placeholder="passwordPlaceholder"
            placeholder="Password"
            autocomplete="current-password"
            class="w-full px-4 py-4 rounded-xl border border-gray-300 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-colors duration-300 text-center text-lg"
          />
          <button
            type="button"
            id="toggle-password"
            class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors"
            data-i18n-aria="togglePasswordVisibility"
            aria-label="Toggle password visibility"
          >
            <svg id="eye-open" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            <svg id="eye-closed" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
            </svg>
          </button>
        </div>

        <button
          type="submit"
          id="access-btn"
          class="w-full bg-primary text-white font-semibold py-4 px-8 rounded-lg hover:bg-primary-dark transition-all duration-300 transform hover:scale-[1.02] shadow-lg focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
          data-i18n="accessDashboard"
        >
          Access Dashboard
        </button>

        <div id="login-error" class="hidden mt-4 p-4 bg-red-50 border border-red-200 rounded-lg flex items-center justify-center gap-2">
          <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p id="error-text" class="text-sm text-red-700" data-i18n="invalidCredentials">Invalid username or password. Please try again.</p>
        </div>
      </form>
    </div>
  </div>

  <!-- Dashboard Content (hidden until authenticated) -->
  <div id="dashboard-content" class:list={[{ "hidden": !isAuthenticated }]}>
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-40 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
          <div class="flex items-center gap-3">
            <!-- Logo/Icon -->
            <div class="w-10 h-10 bg-primary rounded-xl flex items-center justify-center shadow-sm flex-shrink-0">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>
            </div>
            <h1 id="dashboard-title" class="text-xl sm:text-2xl font-bold text-gray-900" data-i18n="pageTitle">Manufacture Dashboard</h1>
          </div>
          <div class="flex items-center justify-between sm:justify-end gap-2 sm:gap-3">
            <!-- Sync Status - hide on very small screens -->
            <div id="sync-status" class="hidden xs:flex items-center gap-2 text-sm text-gray-500">
              <div class="w-2 h-2 rounded-full bg-primary animate-pulse"></div>
              <span id="sync-status-text" class="hidden sm:inline" data-i18n="connected">Connected</span>
            </div>
            <!-- Language Selector -->
            <LanguageSelector />
            <!-- Audit Logs Link (admin only) -->
            {isAdmin && (
              <a
                href="/admin/audit-logs"
                class="p-2.5 text-gray-500 hover:text-primary hover:bg-gray-100 rounded-lg transition-colors min-w-[44px] min-h-[44px] flex items-center justify-center"
                title="Audit Logs"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                </svg>
              </a>
            )}
            <!-- Refresh Button -->
            <button
              id="refresh-btn"
              type="button"
              class="p-2.5 text-gray-500 hover:text-primary hover:bg-gray-100 rounded-lg transition-colors min-w-[44px] min-h-[44px] flex items-center justify-center"
              data-i18n-title="refreshQuotes"
              title="Refresh quotes"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </button>
            <!-- Logout Button -->
            <button
              id="logout-btn"
              type="button"
              class="px-3 sm:px-4 py-2.5 text-sm text-gray-600 hover:text-gray-900 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors font-medium min-h-[44px]"
              data-i18n="logout"
            >
              Logout
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Area - React Dashboard -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <AdminDashboard client:load isAuthenticated={isAuthenticated} />
    </div>
  </div>
</BaseLayout>

<script>
  /**
   * Admin Dashboard Script
   * Handles authentication (login/logout), i18n, and communication with React components.
   * Data fetching and polling is now handled by TanStack Query in the React components.
   */

  // Import i18n functions dynamically
  let i18n: typeof import('../../utils/i18n/index') | null = null;

  // Initialize i18n module
  async function initI18n() {
    i18n = await import('../../utils/i18n/index');
    updateAllText();
  }

  // Update all translatable text on the page
  function updateAllText() {
    if (!i18n) return;

    // Update elements with data-i18n attribute (text content)
    document.querySelectorAll('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      if (key) {
        el.textContent = i18n!.t(key);
      }
    });

    // Update elements with data-i18n-placeholder attribute
    document.querySelectorAll('[data-i18n-placeholder]').forEach(el => {
      const key = el.getAttribute('data-i18n-placeholder');
      if (key && el instanceof HTMLInputElement) {
        el.placeholder = i18n!.t(key);
      }
    });

    // Update elements with data-i18n-title attribute
    document.querySelectorAll('[data-i18n-title]').forEach(el => {
      const key = el.getAttribute('data-i18n-title');
      if (key) {
        el.setAttribute('title', i18n!.t(key));
      }
    });

    // Update elements with data-i18n-aria attribute
    document.querySelectorAll('[data-i18n-aria]').forEach(el => {
      const key = el.getAttribute('data-i18n-aria');
      if (key) {
        el.setAttribute('aria-label', i18n!.t(key));
      }
    });
  }

  // Listen for language changes
  window.addEventListener('languageChanged', () => {
    updateAllText();
  });

  // Initialize i18n on load
  initI18n();

  // Elements
  const loginGate = document.getElementById('login-gate');
  const dashboardContent = document.getElementById('dashboard-content');
  const loginForm = document.getElementById('login-form');
  const usernameInput = document.getElementById('username-input') as HTMLInputElement;
  const passwordInput = document.getElementById('password-input') as HTMLInputElement;
  const loginError = document.getElementById('login-error');
  const accessBtn = document.getElementById('access-btn') as HTMLButtonElement;
  const togglePassword = document.getElementById('toggle-password');
  const eyeOpen = document.getElementById('eye-open');
  const eyeClosed = document.getElementById('eye-closed');
  const logoutBtn = document.getElementById('logout-btn');

  // Show dashboard with animation
  function showDashboard() {
    if (!loginGate || !dashboardContent) return;

    loginGate.style.transition = 'opacity 300ms ease, transform 300ms ease';
    loginGate.style.opacity = '0';
    loginGate.style.transform = 'scale(0.98)';

    setTimeout(() => {
      loginGate.classList.add('hidden');
      dashboardContent.classList.remove('hidden');
      dashboardContent.style.opacity = '0';
      dashboardContent.style.transition = 'opacity 300ms ease';

      requestAnimationFrame(() => {
        dashboardContent.style.opacity = '1';
      });
    }, 300);
  }

  // Toggle password visibility
  togglePassword?.addEventListener('click', () => {
    if (!passwordInput) return;
    const type = passwordInput.type === 'password' ? 'text' : 'password';
    passwordInput.type = type;
    eyeOpen?.classList.toggle('hidden');
    eyeClosed?.classList.toggle('hidden');
  });

  // Handle form submission
  loginForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const username = usernameInput?.value?.trim();
    const password = passwordInput?.value;

    if (!username || !password) {
      showError('Please enter both username and password');
      return;
    }

    // Disable button during login
    if (accessBtn) {
      accessBtn.disabled = true;
      accessBtn.textContent = 'Logging in...';
    }

    try {
      const response = await fetch('/api/admin/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ username, password }),
      });

      const data = await response.json();

      if (response.ok && data.success) {
        // Reload the page so SSR provides correct isAuthenticated state to React
        window.location.reload();
      } else {
        showError(data.error || 'Invalid username or password');
      }
    } catch (error) {
      console.error('Login error:', error);
      showError('An error occurred. Please try again.');
    } finally {
      // Re-enable button
      if (accessBtn) {
        accessBtn.disabled = false;
        accessBtn.textContent = i18n?.t('accessDashboard') || 'Access Dashboard';
      }
    }
  });

  function showError(message: string) {
    if (loginError) {
      loginError.classList.remove('hidden');
      const errorText = document.getElementById('error-text');
      if (errorText) {
        errorText.textContent = message;
      }
    }

    // Shake animation on inputs
    [usernameInput, passwordInput].forEach(input => {
      if (input) {
        input.classList.add('border-red-300');
        input.style.animation = 'shake 0.5s ease-in-out';
        setTimeout(() => {
          input.style.animation = '';
        }, 500);
      }
    });
  }

  // Clear error on input
  [usernameInput, passwordInput].forEach(input => {
    input?.addEventListener('input', () => {
      loginError?.classList.add('hidden');
      usernameInput?.classList.remove('border-red-300');
      passwordInput?.classList.remove('border-red-300');
    });
  });

  // Logout
  logoutBtn?.addEventListener('click', async () => {
    try {
      await fetch('/api/admin/logout', { method: 'POST' });
    } catch (error) {
      console.error('Logout error:', error);
    }
    // Reload page to show login form
    window.location.reload();
  });

  // Refresh button - dispatch event for React AdminDashboard to handle
  document.getElementById('refresh-btn')?.addEventListener('click', () => {
    window.dispatchEvent(new CustomEvent('refreshQuotes'));
  });
</script>

<style>
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
    20%, 40%, 60%, 80% { transform: translateX(5px); }
  }
</style>
