---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout 
  title="Contact Us | Nutricraft Labs - Get Your Free Supplement Manufacturing Quote"
  description="Ready to launch your supplement brand? Contact Nutricraft Labs for free consultation, transparent pricing, and expert guidance. Response within 24 hours.">
  <Header />

  <!-- Contact Hero Section -->
  <section class="relative bg-gradient-to-b from-mint-50 to-white overflow-hidden py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-dark-900 mb-6">
          Get in Touch
        </h1>
        <p class="text-xl text-dark-600 max-w-3xl mx-auto">
          Ready to launch your supplement brand? Our team is here to guide you through every step of the sourcing and manufacturing process.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information Section -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <div class="text-center">
          <div class="w-16 h-16 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-dark-900 mb-2">Email</h3>
          <a href="mailto:hello@nutricraftlabs.com" class="text-mint-600 hover:text-mint-700 transition-colors">
            hello@nutricraftlabs.com
          </a>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-dark-900 mb-2">Chat</h3>
          <button 
            onclick="window.openChatwootChat()"
            class="text-mint-600 hover:text-mint-700 transition-colors font-medium">
            Start Live Chat
          </button>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-dark-900 mb-2">Location</h3>
          <p class="text-dark-600">Toronto, Canada</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section id="contact" class="py-20 bg-gradient-to-b from-white to-mint-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-4">
          Start Your Supplement Journey Today
        </h2>
        <p class="text-xl text-dark-600">
          Tell us about your project and let's create something exceptional together
        </p>
      </div>

      <form id="contact-form" class="bg-white rounded-2xl shadow-xl p-8 md:p-12" method="POST" action="/api/contact">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-semibold text-dark-900 mb-2">Full Name *</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
                placeholder="John Doe"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-dark-900 mb-2">Email Address *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold text-dark-900 mb-2">Phone Number</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
                placeholder="+1 (555) 123-4567"
              />
            </div>

            <div>
              <label for="company" class="block text-sm font-semibold text-dark-900 mb-2">Company Name</label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
                placeholder="Your Company"
              />
            </div>
          </div>

          <div class="mt-6">
            <label for="project-type" class="block text-sm font-semibold text-dark-900 mb-2">Project Type *</label>
            <select
              id="project-type"
              name="project-type"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
            >
              <option value="">Select a project type</option>
              <option value="new-brand">New Brand Launch</option>
              <option value="private-label">Private Label</option>
              <option value="custom-formulation">Custom Formulation</option>
              <option value="manufacturing">Manufacturing Only</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="mt-6">
            <label for="message" class="block text-sm font-semibold text-dark-900 mb-2">Project Details *</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
              placeholder="Tell us about your supplement project, including product types, quantities, and timeline..."
            ></textarea>
          </div>

          <div class="mt-8 flex flex-col sm:flex-row gap-4">
            <button
              type="submit"
              class="flex-1 bg-mint-600 text-white font-semibold py-4 px-8 rounded-lg hover:bg-mint-700 transition-colors duration-300"
            >
              Submit Inquiry
            </button>
            <button
              type="button"
              data-cal-link="nutricraftlabs"
              data-cal-config='{"theme":"light"}'
              class="sm:w-auto bg-white text-mint-600 font-semibold py-4 px-8 rounded-lg border-2 border-mint-600 hover:bg-mint-50 transition-colors duration-300"
            >
              Schedule Discovery Call
            </button>
          </div>
        </form>

    </div>
  </section>

  <Footer />
  
  <script>
    // Google Ads Conversion Tracking Function
    function gtag_report_conversion(url) {
      var callback = function () {
        if (typeof(url) != 'undefined') {
          window.location = url;
        }
      };
      gtag('event', 'conversion', {
          'send_to': 'AW-17548601361/0UvVCKjSmpgbEJHQ6a9B',
          'value': 1.0,
          'currency': 'CAD',
          'event_callback': callback
      });
      return false;
    }

    // Form submission handling
    const contactForm = document.getElementById('contact-form');
    if (contactForm) {
      contactForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const submitBtn = this.querySelector('button[type="submit"]');
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Sending...';
        submitBtn.disabled = true;
        
        try {
          const formData = new FormData(this);
          
          // Send form data to API
          const response = await fetch('/api/contact', {
            method: 'POST',
            body: formData
          });
          
          const result = await response.json();
          
          if (result.success) {
            // Track conversion
            if (typeof gtag !== 'undefined') {
              gtag_report_conversion();
            }
            
            // Show success message
            this.innerHTML = `
              <div class="text-center py-12">
                <div class="w-16 h-16 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-semibold text-dark-900 mb-2">Thank You!</h3>
                <p class="text-dark-600">${result.message}</p>
              </div>
            `;
          } else {
            // Show error
            alert(result.error || 'Something went wrong. Please try again.');
            submitBtn.textContent = originalText;
            submitBtn.disabled = false;
          }
        } catch (error) {
          console.error('Form submission error:', error);
          alert('Failed to send message. Please try again later.');
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
        }
      });
    }
  </script>
  
  <script>
    // Handle Chatwoot chat button
    let chatwootReady = false;
    
    // Listen for Chatwoot ready event
    window.addEventListener('chatwoot:ready', function() {
      chatwootReady = true;
    });
    
    // Function to open chat
    window.openChatwootChat = function() {
      if (chatwootReady && window.$chatwoot) {
        window.$chatwoot.toggle('open');
      } else {
        // Try to wait a bit and retry
        let retries = 0;
        const checkInterval = setInterval(function() {
          retries++;
          if (window.$chatwoot) {
            clearInterval(checkInterval);
            window.$chatwoot.toggle('open');
          } else if (retries > 10) {
            clearInterval(checkInterval);
            alert('Chat is still loading. Please try again in a moment.');
          }
        }, 300);
      }
    };
  </script>
</BaseLayout>