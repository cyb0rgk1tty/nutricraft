  <!-- International Phone Input Library -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@23.0.4/build/css/intlTelInput.css">
  <script is:inline src="https://cdn.jsdelivr.net/npm/intl-tel-input@23.0.4/build/js/intlTelInput.min.js"></script>

  <!-- Alpine.js for reactive dropdowns and interactive elements -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.1/dist/cdn.min.js"></script>

  <!-- Custom styling for intl-tel-input to match form fields -->
  <style>
    /* Make intl-tel-input container match other form fields */
    .iti {
      width: 100%;
      display: block;
    }

    .iti__input {
      width: 100% !important;
      padding: 0.75rem 1rem !important;
      border-radius: 0.5rem !important;
      border: 1px solid #d1d5db !important;
      transition: border-color 0.3s, box-shadow 0.3s !important;
    }

    /* Match the mint green focus state of other fields */
    .iti__input:focus {
      outline: none !important;
      border-color: #00c896 !important; /* mint-500 */
      box-shadow: 0 0 0 3px rgba(0, 200, 150, 0.1) !important; /* mint-200 with opacity */
    }

    /* Country dropdown styling */
    .iti__country-list {
      border-radius: 0.5rem !important;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05) !important;
    }

    .iti__selected-country:hover,
    .iti__selected-country:focus {
      background-color: #f0fdf6 !important; /* mint-50 */
    }

    .iti__country:hover {
      background-color: #f0fdf6 !important; /* mint-50 */
    }

    .iti__active {
      background-color: #d1fae5 !important; /* mint-100 */
    }

    /* Loading spinner animation */
    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    .spinner {
      animation: spin 1s linear infinite;
    }
  </style>

  <script is:inline>
    // Initialize International Phone Input
    (function() {
      let phoneInput;
      let iti;
      let retryCount = 0;

      function initPhoneInput() {
        retryCount++;

        if (typeof window.intlTelInput === 'undefined') {
          if (retryCount < 50) {
            // Library not loaded yet, wait and try again
            setTimeout(initPhoneInput, 100);
          } else {
            console.error('intl-tel-input library failed to load after 5 seconds');
          }
          return;
        }

        phoneInput = document.querySelector("#phone");

        if (phoneInput && !phoneInput.classList.contains('iti-initialized')) {
          phoneInput.classList.add('iti-initialized');

          try {
            iti = window.intlTelInput(phoneInput, {
              initialCountry: "ca",
              preferredCountries: ["ca", "us"],
              separateDialCode: true,
              utilsScript: "https://cdn.jsdelivr.net/npm/intl-tel-input@23.0.4/build/js/utils.js",
              formatOnDisplay: true,
              autoPlaceholder: "aggressive",
              customPlaceholder: function(selectedCountryPlaceholder, selectedCountryData) {
                return selectedCountryPlaceholder;
              }
            });

            // Store iti instance globally for form submission
            window.phoneIti = iti;
          } catch(e) {
            console.error('Error initializing intl-tel-input:', e);
          }

          // Add validation styling on blur
          phoneInput.addEventListener('blur', function() {
            if (phoneInput.value.trim()) {
              if (iti.isValidNumber()) {
                phoneInput.classList.remove('border-red-300');
                phoneInput.classList.add('border-green-300');
                phoneInput.setAttribute('aria-invalid', 'false');
              } else {
                phoneInput.classList.remove('border-green-300');
                phoneInput.classList.add('border-red-300');
                phoneInput.setAttribute('aria-invalid', 'true');
              }
            } else {
              phoneInput.classList.remove('border-red-300', 'border-green-300');
              phoneInput.removeAttribute('aria-invalid');
            }
          });

          // Reset validation styling on input
          phoneInput.addEventListener('input', function() {
            phoneInput.classList.remove('border-red-300', 'border-green-300');
            phoneInput.removeAttribute('aria-invalid');
          });
        }
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initPhoneInput);
      } else {
        initPhoneInput();
      }
    })();
  </script>

  <script>
    // Helper function to show inline error messages
    function showFormError(message) {
      const errorContainer = document.getElementById('form-error');
      const errorMessage = document.getElementById('form-error-message');

      if (errorContainer && errorMessage) {
        errorMessage.textContent = message;
        errorContainer.classList.remove('hidden');

        // Scroll to error message
        errorContainer.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }
    }

    // Helper function to hide error messages
    function hideFormError() {
      const errorContainer = document.getElementById('form-error');
      if (errorContainer) {
        errorContainer.classList.add('hidden');
      }
    }

    // Contact Form Conversion Tracking for GTM
    function gtag_report_conversion(url) {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: "contact_form_submission",
        conversion_id: "AW-17548601361/0UvVCKjSmpgbEJHQ6a9B",
        value: 1.0,
        currency: "CAD",
      });

      if (typeof url != "undefined") {
        setTimeout(function () {
          window.location = url;
        }, 100);
      }
      return false;
    }

    // Form submission handling
    const contactForm = document.getElementById("contact-form");
    if (contactForm) {
      contactForm.addEventListener("submit", async function (e) {
        e.preventDefault();

        // Hide any previous error messages
        hideFormError();

        const submitBtn = this.querySelector('button[type="submit"]');
        const originalHtml = submitBtn.innerHTML;
        submitBtn.innerHTML = `
          <span class="flex items-center justify-center gap-2">
            <svg class="spinner w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Sending...</span>
          </span>
        `;
        submitBtn.disabled = true;

        try {
          const formData = new FormData(this);

          // Validate and format phone number if provided
          const phoneInput = document.querySelector("#phone");
          if (window.phoneIti && phoneInput && phoneInput.value.trim()) {
            if (!window.phoneIti.isValidNumber()) {
              showFormError("Please enter a valid phone number for your selected country.");
              submitBtn.innerHTML = originalHtml;
              submitBtn.disabled = false;
              phoneInput.focus();
              return;
            }
            // Get phone number in E.164 format (e.g., +14168888888)
            const fullNumber = window.phoneIti.getNumber();
            const countryData = window.phoneIti.getSelectedCountryData();

            formData.set('phone', fullNumber);
            // Send ISO country code (e.g., "CA", "US") - uppercase for CRM
            formData.set('phoneCountryCode', countryData.iso2.toUpperCase());
          }

          // Send form data to API
          const response = await fetch("/api/contact", {
            method: "POST",
            body: formData,
          });

          const result = await response.json();

          if (result.success) {
            // Track conversion
            if (typeof gtag_report_conversion === "function") {
              gtag_report_conversion();
            }

            // Show success message
            this.innerHTML = `
              <div class="text-center py-12">
                <div class="w-16 h-16 bg-mint-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-semibold text-dark-900 mb-2">Thank You!</h3>
                <p class="text-dark-600">${result.message}</p>
              </div>
            `;
          } else {
            // Show inline error
            showFormError(result.error || "Something went wrong. Please try again.");
            submitBtn.innerHTML = originalHtml;
            submitBtn.disabled = false;
          }
        } catch (error) {
          console.error("Form submission error:", error);
          showFormError("Failed to send message. Please try again later.");
          submitBtn.innerHTML = originalHtml;
          submitBtn.disabled = false;
        }
      });
    }
  </script>

  <script>
    // Handle Chatwoot chat button
    let chatwootReady = false;

    // Listen for Chatwoot ready event
    window.addEventListener("chatwoot:ready", function () {
      chatwootReady = true;
    });

    // Function to open chat
    function openChatwootChat() {
      if (chatwootReady && window.$chatwoot) {
        window.$chatwoot.toggle("open");
        // Track chat open in GTM
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push({
          event: "chat_opened",
          chat_method: "button_click",
        });
      } else {
        // Try to wait a bit and retry
        let retries = 0;
        const checkInterval = setInterval(function () {
          retries++;
          if (window.$chatwoot) {
            clearInterval(checkInterval);
            window.$chatwoot.toggle("open");
            // Track chat open in GTM
            window.dataLayer = window.dataLayer || [];
            window.dataLayer.push({
              event: "chat_opened",
              chat_method: "button_click",
            });
          } else if (retries > 10) {
            clearInterval(checkInterval);
            // Show inline error if showFormError is available, otherwise console log
            if (typeof showFormError === 'function') {
              showFormError("Chat is still loading. Please try again in a moment.");
            } else {
              console.error("Chat is still loading. Please try again in a moment.");
            }
          }
        }, 300);
      }
    }

    // Attach event listener to chat button
    const chatButton = document.getElementById('chat-button');
    if (chatButton) {
      chatButton.addEventListener('click', openChatwootChat);
    }
  </script>
