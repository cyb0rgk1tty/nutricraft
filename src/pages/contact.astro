---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout
  title="Contact Us | Nutricraft Labs - Get Your Free Supplement Manufacturing Quote"
  description="Ready to launch your supplement brand? Contact Nutricraft Labs for free consultation, transparent pricing, and expert guidance. Response within 24 hours."
>
  <Header />

  <!-- Compact Hero Section -->
  <section
    class="relative bg-gradient-to-b from-mint-50 to-white overflow-hidden py-8 md:py-12"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1
          class="text-3xl md:text-4xl lg:text-5xl font-bold text-dark-900 mb-3"
        >
          Get in Touch
        </h1>
        <p class="text-lg md:text-xl text-dark-600 max-w-3xl mx-auto">
          Ready to launch your supplement brand? From initial idea to final product,
          we guide you through every stepâ€”formulation, sourcing, manufacturing,
          labeling, packaging, and regulatory compliance.
        </p>
      </div>
    </div>
  </section>

  <!-- Two-Column Contact Section -->
  <section id="contact" class="py-12 bg-gradient-to-b from-white to-mint-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Left Column: Contact Information & Trust Elements (appears second on mobile) -->
        <div class="lg:col-span-1 space-y-6 order-2 lg:order-1">
          <!-- Contact Information Cards -->
          <div class="bg-white rounded-xl shadow-md p-6">
            <h2 class="text-xl font-bold text-dark-900 mb-6">Contact Information</h2>

            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg
                    class="w-6 h-6 text-mint-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-dark-900 mb-1">Email</h3>
                  <a
                    href="mailto:hello@nutricraftlabs.com"
                    class="text-mint-600 hover:text-mint-700 transition-colors text-sm"
                  >
                    hello@nutricraftlabs.com
                  </a>
                </div>
              </div>

              <!-- Chat -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg
                    class="w-6 h-6 text-mint-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-dark-900 mb-1">Live Chat</h3>
                  <button
                    id="chat-button"
                    class="text-mint-600 hover:text-mint-700 transition-colors font-medium text-sm"
                  >
                    Start Chat Now
                  </button>
                </div>
              </div>

              <!-- Location -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg
                    class="w-6 h-6 text-mint-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-dark-900 mb-1">Location</h3>
                  <p class="text-dark-600 text-sm">Toronto, Canada</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Trust Elements -->
          <div class="bg-mint-50 rounded-xl p-6">
            <h3 class="font-bold text-dark-900 mb-4">Why Choose Us?</h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-mint-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-dark-700">Response within 24 hours</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-mint-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-dark-700">100% Confidential</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-mint-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-dark-700">Free consultation & quote</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-mint-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-dark-700">Guaranteed clarity after consult</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-mint-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-dark-700">GMP-certified partners</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Right Column: Contact Form (appears first on mobile) -->
        <div class="lg:col-span-2 order-1 lg:order-2">
          <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8">
            <div class="mb-6">
              <h2 class="text-2xl md:text-3xl font-bold text-dark-900 mb-2">
                Start Your Supplement Journey
              </h2>
              <p class="text-dark-600">
                Tell us about your project and we'll get back to you within 24 hours
              </p>
            </div>

            <!-- Error message container (hidden by default) -->
            <div id="form-error" class="hidden mb-6 p-4 bg-red-50 border border-red-200 rounded-lg" role="alert" aria-live="polite">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <h3 class="font-semibold text-red-800 mb-1">Error</h3>
                  <p id="form-error-message" class="text-sm text-red-700"></p>
                </div>
              </div>
            </div>

            <form
              id="contact-form"
              method="POST"
              action="/api/contact"
            >
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label
              for="name"
              class="block text-sm font-semibold text-dark-900 mb-2"
              >Full Name *</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
              placeholder="John Doe"
            />
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-semibold text-dark-900 mb-2"
              >Email Address *</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
              placeholder="john@example.com"
            />
          </div>

          <div>
            <label
              for="phone"
              class="block text-sm font-semibold text-dark-900 mb-2"
              >Phone Number</label
            >
            <input
              type="tel"
              id="phone"
              name="phone"
              aria-describedby="phone-helper"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
              placeholder="+1 (555) 123-4567"
            />
            <p id="phone-helper" class="text-xs text-gray-500 mt-1">Select your country and enter your phone number</p>
          </div>

          <div>
            <label
              for="company"
              class="block text-sm font-semibold text-dark-900 mb-2"
              >Company Name</label
            >
            <input
              type="text"
              id="company"
              name="company"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
              placeholder="Your Company"
            />
          </div>

          <!-- Honeypot field for spam prevention (hidden from humans, bots will fill it) -->
          <input
            type="text"
            name="website"
            tabindex="-1"
            autocomplete="off"
            style="position: absolute; left: -9999px; width: 1px; height: 1px;"
            aria-hidden="true"
          />
        </div>

        <div class="grid md:grid-cols-2 gap-6 mt-6">
          <div class="relative" x-data="{ open: false, selected: [] }">
            <label
              id="target-market-label"
              for="target-market"
              class="block text-sm font-semibold text-dark-900 mb-2"
              >Target Market</label
            >
            <!-- Hidden input to store selected values -->
            <input type="hidden" id="target-market" name="target-market" :value="selected.join(', ')" />

            <!-- Display button -->
            <button
              type="button"
              @click="open = !open"
              :aria-expanded="open"
              aria-controls="target-market-panel"
              aria-labelledby="target-market-label"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300 text-left flex items-center justify-between bg-white"
            >
              <span
                :class="selected.length > 0 ? 'text-dark-900' : 'text-gray-500'"
                x-text="selected.length > 0 ? selected.join(', ') : 'Select target markets'"
              ></span>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>

            <!-- Dropdown panel -->
            <div
              id="target-market-panel"
              x-show="open"
              @click.away="open = false"
              x-transition
              role="group"
              aria-labelledby="target-market-label"
              class="absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg"
            >
              <div class="p-3 space-y-2">
                <label class="flex items-center space-x-3 hover:bg-mint-50 p-2 rounded cursor-pointer">
                  <input
                    type="checkbox"
                    value="USA"
                    x-model="selected"
                    class="w-4 h-4 text-mint-600 border-gray-300 rounded focus:ring-mint-500"
                  />
                  <span class="text-dark-900">USA</span>
                </label>
                <label class="flex items-center space-x-3 hover:bg-mint-50 p-2 rounded cursor-pointer">
                  <input
                    type="checkbox"
                    value="Canada"
                    x-model="selected"
                    class="w-4 h-4 text-mint-600 border-gray-300 rounded focus:ring-mint-500"
                  />
                  <span class="text-dark-900">Canada</span>
                </label>
                <label class="flex items-center space-x-3 hover:bg-mint-50 p-2 rounded cursor-pointer">
                  <input
                    type="checkbox"
                    value="Other"
                    x-model="selected"
                    class="w-4 h-4 text-mint-600 border-gray-300 rounded focus:ring-mint-500"
                  />
                  <span class="text-dark-900">Other</span>
                </label>
              </div>
            </div>
          </div>

          <div>
            <label
              for="order-quantity"
              class="block text-sm font-semibold text-dark-900 mb-2"
              >Order Quantity</label
            >
            <input
              type="text"
              id="order-quantity"
              name="order-quantity"
              pattern="[0-9]*"
              inputmode="numeric"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
              placeholder="e.g., 1000"
            />
          </div>

          <div>
            <label
              for="budget"
              class="block text-sm font-semibold text-dark-900 mb-2"
              >Budget</label
            >
            <select
              id="budget"
              name="budget"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
            >
              <option value="">Select a budget range</option>
              <option value="$0 - $5,000">$0 - $5,000</option>
              <option value="$5,000 - $10,000">$5,000 - $10,000</option>
              <option value="$10,000+">$10,000+</option>
            </select>
          </div>

          <div>
            <label
              for="timeline"
              class="block text-sm font-semibold text-dark-900 mb-2"
              >Timeline</label
            >
            <select
              id="timeline"
              name="timeline"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
            >
              <option value="">Select your target timeline</option>
              <option value="1-3 months">1-3 months</option>
              <option value="3-6 months">3-6 months</option>
              <option value="6-12 months">6-12 months</option>
              <option value="12+ months">12+ months</option>
              <option value="Not sure yet">Not sure yet</option>
            </select>
          </div>
        </div>

        <div class="mt-6">
          <label
            for="project-type"
            class="block text-sm font-semibold text-dark-900 mb-2"
            >Project Type *</label
          >
          <select
            id="project-type"
            name="project-type"
            required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
          >
            <option value="">Select a project type</option>
            <option value="private-label">Private Label / White Label</option>
            <option value="custom-formulation">Custom Formulation</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div class="mt-6">
          <label
            for="message"
            class="block text-sm font-semibold text-dark-900 mb-2"
            >Project Details *</label
          >
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-mint-500 focus:ring-2 focus:ring-mint-200 transition-colors duration-300"
            placeholder="Tell us about your supplement project, including product types, quantities, and timeline..."
          ></textarea>
        </div>

              <div class="mt-8 flex flex-col sm:flex-row gap-4">
                <button
                  type="submit"
                  class="flex-1 bg-mint-600 text-white font-semibold py-4 px-8 rounded-lg hover:bg-mint-700 transition-colors duration-300"
                >
                  Submit Inquiry
                </button>
                <button
                  type="button"
                  data-cal-link="Nutricraftlabs"
                  data-cal-config='{"theme":"light"}'
                  class="sm:w-auto bg-white text-mint-600 font-semibold py-4 px-8 rounded-lg border-2 border-mint-600 hover:bg-mint-50 transition-colors duration-300"
                >
                  Schedule Discovery Call
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />

