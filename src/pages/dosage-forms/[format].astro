---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import FormulationImage from "../../components/FormulationImage.astro";
import { dosageForms, getFormulationBySlug, formulationComparison } from "../../data/dosage-forms.js";
import { getEntry } from 'astro:content';

export async function getStaticPaths() {
  return dosageForms.map((formulation) => ({
    params: { format: formulation.slug },
  }));
}

const { format } = Astro.params;
const formulation = getFormulationBySlug(format);

if (!formulation) {
  return Astro.redirect('/404');
}

// Get article content from content collection
const article = await getEntry('dosage-forms', formulation.slug);
const { Content } = article ? await article.render() : { Content: null };

// SEO metadata
const pageTitle = `${formulation.name} Manufacturing - Nutricraft Labs`;
const pageDescription = article?.data.metaDescription || formulation.metaDescription || formulation.shortDescription;
const pageImage = formulation.articleImage 
  ? `https://Nutricraftlabs.com${formulation.articleImage.large}` 
  : `https://Nutricraftlabs.com/images/formulations/${formulation.image}`;
---

<BaseLayout 
  title={pageTitle} 
  description={pageDescription}
  image={pageImage}
>
  
  <Header />

  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-mint-50 to-white py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
          <div class="relative w-full max-w-2xl mx-auto h-64 md:h-80 mb-8 overflow-hidden rounded-2xl bg-gradient-to-br from-mint-100 to-mint-200">
            <FormulationImage
              formulation={formulation}
              class="w-full h-full object-cover"
              loading="eager"
              priority={true}
              sizes="(max-width: 768px) 100vw, (max-width: 1536px) 66vw, 800px"
            />
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-dark-900 mb-4">
            {formulation.name} Manufacturing
          </h1>
          <p class="text-xl text-dark-600 max-w-3xl mx-auto mb-8">
            {formulation.shortDescription}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button
              data-cal-link="Nutricraftlabs"
              data-cal-config='{"theme":"light"}'
              class="inline-flex items-center justify-center px-8 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-colors duration-300"
            >
              Schedule Consultation
              <svg
                class="ml-2 w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
            </button>
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-8 py-4 bg-white text-mint-600 font-semibold rounded-lg border-2 border-mint-600 hover:bg-mint-50 transition-colors duration-300"
            >
              Get a Quote
              <svg
                class="ml-2 w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                ></path>
              </svg>
            </a>
          </div>
      </div>
    </div>
  </section>

  <!-- Article Content Section -->
  {article && (
    <section class="pt-0 pb-16 bg-white">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Article Content -->
          <div class="prose prose-lg prose-gray max-w-none">
            {Content && <Content />}
          </div>
      </div>
    </section>
  )}

  <!-- Key Benefits Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-dark-900 mb-12 text-center">
          Why Choose {formulation.name}?
        </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {formulation.benefits.map((benefit, index) => (
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-mint-100 rounded-lg flex items-center justify-center">
                  <svg
                    class="w-6 h-6 text-mint-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    ></path>
                  </svg>
                </div>
              </div>
              <p class="ml-4 text-dark-600">{benefit}</p>
            </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Best For Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-dark-900 mb-12 text-center">
          Best For These Supplements
        </h2>
      
      <div class="flex flex-wrap justify-center gap-4">
        {formulation.bestFor.map((item, index) => (
            <span class="px-6 py-3 bg-white rounded-full text-dark-700 shadow-md text-lg">
              {item}
            </span>
        ))}
      </div>
    </div>
  </section>




  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-b from-mint-50 to-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-6">
          Ready to Manufacture {formulation.name}?
        </h2>
        <p class="text-xl text-dark-600 mb-8">
          Our expert team will guide you through formulation, production, and 
          regulatory compliance for your {formulation.name.toLowerCase()} products.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button
            data-cal-link="Nutricraftlabs"
            data-cal-config='{"theme":"light"}'
            class="inline-flex items-center justify-center px-8 py-4 bg-mint-600 text-white font-semibold rounded-lg hover:bg-mint-700 transition-colors duration-300"
          >
            Schedule Consultation
            <svg
              class="ml-2 w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
          </button>
          <a
            href="/dosage-forms"
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-mint-600 font-semibold rounded-lg border-2 border-mint-600 hover:bg-mint-50 transition-colors duration-300"
          >
            View All Formats
          </a>
        </div>
    </div>
  </section>

  <Footer />
</BaseLayout>


