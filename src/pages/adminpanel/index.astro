---
/**
 * Admin Dashboard Home Page
 * Central hub for all admin functionality
 * Restricted to nutricraftadmin only
 */
import AdminLayout from '../../layouts/AdminLayout.astro';
import { AdminHome } from '../../components/react/admin';
import { verifySession } from '../../utils/adminAuth';

// Check if user is authenticated
const authResult = await verifySession(Astro.request);

// Redirect to quotes page (has login form) if not authenticated
if (!authResult) {
  return Astro.redirect('/mandash');
}

// Only nutricraftadmin can access the dashboard home
if (authResult.user.username !== 'nutricraftadmin') {
  return Astro.redirect('/mandash');
}

// SEO metadata
const title = 'Admin Dashboard | Nutricraft Labs';
const description = 'Admin dashboard for Nutricraft Labs';
---

<AdminLayout title={title} description={description} currentPage="dashboard">
  <!-- Page Header -->
  <div class="bg-white border-b border-gray-200 sticky top-0 lg:top-0 z-30">
    <div class="px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <div>
          <h1 class="text-xl sm:text-2xl font-bold text-gray-900">Dashboard</h1>
          <p class="text-sm text-gray-500 mt-1">Overview of your admin activity</p>
        </div>
        <div class="flex items-center gap-2 sm:gap-3">
          <!-- Refresh Button -->
          <button
            id="refresh-btn"
            type="button"
            class="p-2.5 text-gray-500 hover:text-primary hover:bg-gray-100 rounded-lg transition-colors min-w-[44px] min-h-[44px] flex items-center justify-center"
            title="Refresh dashboard"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Area - React Dashboard -->
  <div class="px-4 sm:px-6 lg:px-8 py-6">
    <AdminHome client:load />
  </div>
</AdminLayout>

<script>
  // Refresh button - dispatch event for React AdminHome to handle
  document.getElementById('refresh-btn')?.addEventListener('click', () => {
    window.dispatchEvent(new CustomEvent('refreshDashboard'));
  });
</script>
