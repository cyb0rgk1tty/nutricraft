---
import NewsletterSignup from './NewsletterSignup.astro';

const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Services",
    links: [
      { label: "All Services", href: "/services" },
      { label: "Low MOQ Manufacturing", href: "/services/low-moq-manufacturing" },
      { label: "Private & White Label", href: "/services/private-white-label-manufacturing" },
      { label: "Custom Formulation", href: "/services/custom-formulation" },
      { label: "Dosage Forms", href: "/dosage-forms" },
    ],
  },
  {
    title: "Compliance & Support",
    links: [
      { label: "GMP Partner Matching", href: "/services/gmp-partner-matching" },
      { label: "Quality Testing", href: "/services/quality-testing" },
      { label: "Compliance Labels", href: "/services/compliance-labels" },
      { label: "NPN Applications", href: "/services/npn-applications" },
      { label: "Fulfillment & Distribution", href: "/services/fulfillment-distribution" },
      { label: "Marketing & Brand Kit", href: "/services/marketing-brand-kit" },
      { label: "Website Design & Development", href: "/services/website-design-development" },
    ],
  },
  {
    title: "Company",
    links: [
      { label: "About Us", href: "/#about" },
      { label: "Schedule Call", href: "/schedule-call" },
      { label: "Contact", href: "/contact" },
      { label: "FAQs", href: "/#faq" },
    ],
  },
];

const legalLinks = [
  { label: "Privacy Policy", href: "/privacy" },
  { label: "Terms of Service", href: "/terms" },
  { label: "Cookie Policy", href: "/cookies" },
];
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="section-container py-12">
    <!-- Newsletter Signup Section -->
    <div class="mb-12 pb-12 border-b border-gray-200 flex justify-center">
      <NewsletterSignup />
    </div>

    <!-- Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <!-- Company Info -->
      <div>
        <picture class="inline-block mb-4">
          <source srcset="/images/logo-header-mobile.webp" type="image/webp" />
          <img
            src="/images/logo-header-mobile.jpg"
            alt="Nutricraft Labs"
            class="h-5 w-auto opacity-90 hover:opacity-100 transition-opacity"
            width="200"
            height="20"
            loading="lazy"
          />
        </picture>
        <p class="text-gray-600 mb-4">
          Your trusted partner for private-label supplements and compliance in
          North America. We connect you with vetted GMP manufacturers and handle
          all regulatory requirements.
        </p>
        <div class="flex space-x-4">
          <!-- Social Media Icons -->
          <a
            href="https://linkedin.com"
            aria-label="LinkedIn"
            class="text-gray-400 hover:text-primary transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
          </a>
          <a
            href="https://twitter.com"
            aria-label="Twitter"
            class="text-gray-400 hover:text-primary transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Footer Links -->
      {
        footerLinks.map((section) => (
          <div>
            <h4 class="font-semibold text-gray-900 mb-3">{section.title}</h4>
            <ul class="space-y-2">
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-gray-600 hover:text-primary transition-colors text-sm"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-gray-200">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
      >
        <p class="text-sm text-gray-600">
          Â© {currentYear} Nutricraft Labs. All rights reserved.
        </p>
        <div class="flex gap-1 text-sm text-gray-600">
          {
            legalLinks.map((link, index) => (
              <>
                <a
                  href={link.href}
                  class="hover:text-primary transition-colors"
                >
                  {link.label}
                </a>
                {index < legalLinks.length - 1 && (
                  <span class="mx-2">|</span>
                )}
              </>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
