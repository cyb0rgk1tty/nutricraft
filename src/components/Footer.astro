---
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: 'Services',
    links: [
      { label: 'GMP Manufacturer Matchmaking', href: '#services' },
      { label: 'Stock Formulas & White-Label', href: '#services' },
      { label: 'NPN Applications', href: '#services' },
      { label: 'Custom Formulation', href: '#services' }
    ]
  },
  {
    title: 'Company',
    links: [
      { label: 'About Us', href: '#about' },
      { label: 'Partner Certifications', href: '#certifications' },
      { label: 'Contact', href: '#contact' }
    ]
  },
  {
    title: 'Resources',
    links: [
      { label: 'MOQ Calculator', href: '#tools' },
      { label: 'Lead Time Estimator', href: '#tools' },
      { label: 'Cost Savings Calculator', href: '#tools' }
    ]
  },
  {
    title: 'Legal',
    links: [
      { label: 'Privacy Policy', href: '/privacy' },
      { label: 'Terms of Service', href: '/terms' },
      { label: 'Cookie Policy', href: '/cookies' }
    ]
  }
];
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="section-container py-12">
    <!-- Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 mb-8">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <h3 class="text-2xl font-bold text-primary mb-4">The Wellness Drop</h3>
        <p class="text-gray-600 mb-4">
          Your trusted partner for private-label supplements and compliance in North America. 
          We connect you with vetted GMP manufacturers and handle all regulatory requirements.
        </p>
        <div class="flex space-x-4">
          <!-- Social Media Icons -->
          <a href="https://linkedin.com" aria-label="LinkedIn" class="text-gray-400 hover:text-primary transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href="https://twitter.com" aria-label="Twitter" class="text-gray-400 hover:text-primary transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Footer Links -->
      {footerLinks.map(section => (
        <div>
          <h4 class="font-semibold text-gray-900 mb-3">{section.title}</h4>
          <ul class="space-y-2">
            {section.links.map(link => (
              <li>
                <a 
                  href={link.href} 
                  class="text-gray-600 hover:text-primary transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-gray-200">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-sm text-gray-600">
          Â© {currentYear} The Wellness Drop. All rights reserved.
        </p>
        <p class="text-sm text-gray-600">
          hello@thewellnessdrop.com | Partner Network Certified
        </p>
      </div>
    </div>
  </div>
</footer>