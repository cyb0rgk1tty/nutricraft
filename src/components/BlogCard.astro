---
export interface Props {
  post: {
    id: string;
    data: {
      title: string;
      description: string;
      pubDate: Date;
      author: string;
      tags: string[];
      image?: {
        url: string;
        alt: string;
      };
    };
  };
}

const { post } = Astro.props;
const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="card group hover:scale-105 transition-all duration-300 h-full flex flex-col">
  {post.data.image && (
    <img
      src={post.data.image.url}
      alt={post.data.image.alt}
      class="w-full h-48 object-cover rounded-lg mb-4"
    />
  )}

  <div class="flex flex-wrap gap-2 mb-3">
    {post.data.tags.slice(0, 3).map((tag) => (
      <span class="text-xs px-2 py-1 bg-primary/10 text-primary rounded-full">
        {tag}
      </span>
    ))}
  </div>

  <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-primary transition-colors">
    <a href={`/blog/${post.id}`} class="hover:underline">
      {post.data.title}
    </a>
  </h3>

  <p class="text-gray-600 mb-4 flex-grow">
    {post.data.description}
  </p>

  <div class="flex items-center justify-between text-sm text-gray-500 mt-auto pt-4 border-t border-gray-200">
    <span>{post.data.author}</span>
    <time datetime={post.data.pubDate.toISOString()}>
      {formattedDate}
    </time>
  </div>
</article>
