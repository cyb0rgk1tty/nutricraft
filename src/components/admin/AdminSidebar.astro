---
/**
 * Admin Sidebar Navigation
 * Provides consistent navigation across all admin pages
 *
 * Features:
 * - Fixed sidebar on desktop (lg+)
 * - Slide-in overlay on mobile
 * - Conditional nav items based on user role
 * - Active state highlighting
 * - Logout functionality
 */

interface Props {
  currentPage: 'dashboard' | 'quotes' | 'settings' | 'audit-logs' | 'google-ads' | 'invoices';
  isAdmin?: boolean;
  username?: string;
}

const { currentPage, isAdmin = false, username } = Astro.props;

// Navigation items configuration
const navItems = [
  {
    id: 'dashboard',
    label: 'Dashboard',
    href: '/admin',
    icon: 'home',
    adminOnly: true,
  },
  {
    id: 'quotes',
    label: 'Quotes',
    href: '/admin/quotes',
    icon: 'clipboard',
    adminOnly: false,
  },
  {
    id: 'invoices',
    label: 'Invoices',
    href: '/admin/invoices',
    icon: 'receipt',
    adminOnly: true,
  },
  {
    id: 'advertisements',
    label: 'Advertisements',
    icon: 'megaphone',
    adminOnly: true,
    submenu: [
      {
        id: 'google-ads',
        label: 'Google Ads',
        href: '/admin/google-ads',
      },
    ],
  },
  {
    id: 'settings',
    label: 'Settings',
    href: '/admin/settings',
    icon: 'cog',
    adminOnly: false,
  },
  {
    id: 'audit-logs',
    label: 'Audit Logs',
    href: '/admin/audit-logs',
    icon: 'document',
    adminOnly: true,
  },
];

// Filter items based on admin status
const visibleNavItems = navItems.filter(item => !item.adminOnly || isAdmin);
---

<!-- Mobile overlay backdrop -->
<div
  id="sidebar-overlay"
  class="fixed inset-0 bg-black/50 z-40 lg:hidden hidden"
  aria-hidden="true"
></div>

<!-- Sidebar -->
<aside
  id="admin-sidebar"
  class="fixed inset-y-0 left-0 z-50 w-64 bg-white border-r border-gray-200 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out flex flex-col"
>
  <!-- Logo/Brand -->
  <div class="h-16 flex items-center gap-3 px-4 border-b border-gray-100">
    <div class="w-10 h-10 bg-primary rounded-xl flex items-center justify-center shadow-sm flex-shrink-0">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
      </svg>
    </div>
    <div class="flex flex-col">
      <span class="font-bold text-gray-900 text-sm">Nutricraft Labs</span>
      <span class="text-xs text-gray-500">Admin Panel</span>
    </div>

    <!-- Mobile close button -->
    <button
      id="sidebar-close"
      class="lg:hidden ml-auto p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
      aria-label="Close sidebar"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-2 py-4 space-y-1 overflow-y-auto">
    {visibleNavItems.map((item) => {
      const isActive = currentPage === item.id;
      const hasSubmenu = 'submenu' in item && item.submenu;
      const isSubmenuActive = hasSubmenu && item.submenu.some((sub: any) => currentPage === sub.id);

      if (hasSubmenu) {
        return (
          <div class="submenu-container">
            <button
              type="button"
              class:list={[
                'submenu-toggle w-full flex items-center justify-between gap-3 px-4 py-3 rounded-lg transition-colors',
                isSubmenuActive
                  ? 'bg-primary/10 text-primary font-medium'
                  : 'text-gray-600 hover:bg-gray-50 hover:text-primary'
              ]}
              data-expanded={isSubmenuActive ? 'true' : 'false'}
            >
              <div class="flex items-center gap-3">
                {item.icon === 'megaphone' && (
                  <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                  </svg>
                )}
                <span>{item.label}</span>
              </div>
              <svg class="submenu-chevron w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class:list={['submenu-items ml-4 mt-1 space-y-1', !isSubmenuActive && 'hidden']}>
              {item.submenu.map((sub: any) => {
                const isSubActive = currentPage === sub.id;
                return (
                  <a
                    href={sub.href}
                    class:list={[
                      'flex items-center gap-3 px-4 py-2.5 rounded-lg transition-colors text-sm',
                      isSubActive
                        ? 'bg-primary/10 text-primary font-medium'
                        : 'text-gray-600 hover:bg-gray-50 hover:text-primary'
                    ]}
                    aria-current={isSubActive ? 'page' : undefined}
                  >
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    <span>{sub.label}</span>
                  </a>
                );
              })}
            </div>
          </div>
        );
      }

      return (
        <a
          href={item.href}
          class:list={[
            'flex items-center gap-3 px-4 py-3 rounded-lg transition-colors',
            isActive
              ? 'bg-primary/10 text-primary font-medium'
              : 'text-gray-600 hover:bg-gray-50 hover:text-primary'
          ]}
          aria-current={isActive ? 'page' : undefined}
        >
          {item.icon === 'home' && (
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          )}
          {item.icon === 'clipboard' && (
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
          )}
          {item.icon === 'receipt' && (
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          )}
          {item.icon === 'cog' && (
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          )}
          {item.icon === 'document' && (
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
          )}
          <span>{item.label}</span>
        </a>
      );
    })}
  </nav>

  <!-- Bottom section -->
  <div class="border-t border-gray-100 p-4 space-y-3">
    <!-- User info -->
    {username && (
      <div class="flex items-center gap-3 px-2 py-2">
        <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900 truncate">{username}</p>
          <p class="text-xs text-gray-500">{isAdmin ? 'Administrator' : 'User'}</p>
        </div>
      </div>
    )}

    <!-- Logout button -->
    <button
      id="sidebar-logout"
      class="w-full flex items-center gap-3 px-4 py-2.5 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
      </svg>
      <span>Logout</span>
    </button>
  </div>
</aside>

<!-- Mobile header with hamburger menu -->
<div class="lg:hidden fixed top-0 left-0 right-0 h-16 bg-white border-b border-gray-200 z-30 flex items-center px-4">
  <button
    id="sidebar-toggle"
    class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
    aria-label="Open menu"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
  <span class="ml-3 font-bold text-gray-900">Nutricraft Admin</span>
</div>

<script>
  // Sidebar toggle functionality
  const sidebar = document.getElementById('admin-sidebar');
  const overlay = document.getElementById('sidebar-overlay');
  const toggleBtn = document.getElementById('sidebar-toggle');
  const closeBtn = document.getElementById('sidebar-close');
  const logoutBtn = document.getElementById('sidebar-logout');

  function openSidebar() {
    sidebar?.classList.remove('-translate-x-full');
    overlay?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeSidebar() {
    sidebar?.classList.add('-translate-x-full');
    overlay?.classList.add('hidden');
    document.body.style.overflow = '';
  }

  toggleBtn?.addEventListener('click', openSidebar);
  closeBtn?.addEventListener('click', closeSidebar);
  overlay?.addEventListener('click', closeSidebar);

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeSidebar();
    }
  });

  // Logout functionality
  logoutBtn?.addEventListener('click', async () => {
    try {
      await fetch('/api/admin/logout', { method: 'POST' });
    } catch (error) {
      console.error('Logout error:', error);
    }
    window.location.href = '/admin/quotes';
  });

  // Submenu toggle functionality
  const submenuToggles = document.querySelectorAll('.submenu-toggle');
  submenuToggles.forEach((toggle) => {
    toggle.addEventListener('click', () => {
      const container = toggle.closest('.submenu-container');
      const items = container?.querySelector('.submenu-items');
      const chevron = toggle.querySelector('.submenu-chevron');
      const isExpanded = toggle.getAttribute('data-expanded') === 'true';

      if (items && chevron) {
        if (isExpanded) {
          items.classList.add('hidden');
          chevron.classList.remove('rotate-180');
          toggle.setAttribute('data-expanded', 'false');
        } else {
          items.classList.remove('hidden');
          chevron.classList.add('rotate-180');
          toggle.setAttribute('data-expanded', 'true');
        }
      }
    });
  });

  // Initialize chevron rotation for expanded submenus
  submenuToggles.forEach((toggle) => {
    if (toggle.getAttribute('data-expanded') === 'true') {
      const chevron = toggle.querySelector('.submenu-chevron');
      chevron?.classList.add('rotate-180');
    }
  });
</script>
