---
export interface Props {
  testimonial: {
    name: string;
    company: string;
    role: string;
    content: string;
    rating: number;
    metric?: string;
  };
}

const { testimonial } = Astro.props;
---

<div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow h-full flex flex-col min-h-[320px]">
  {testimonial.metric && (
    <div class="bg-mint-50 text-mint-700 px-4 py-2 rounded-lg text-center mb-4">
      <p class="font-bold text-lg">{testimonial.metric}</p>
    </div>
  )}
  <p class="text-gray-600 mb-4 italic flex-grow overflow-y-auto">"{testimonial.content}"</p>
  <div class="mt-auto pt-4 border-t border-gray-100">
    <p class="font-semibold text-gray-900">{testimonial.name}</p>
    <p class="text-sm text-gray-500">{testimonial.role}, {testimonial.company}</p>
  </div>
</div>