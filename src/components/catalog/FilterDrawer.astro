---
/**
 * FilterDrawer Component
 * Slide-out drawer for filtering products by category and dosage form
 * Opens from the right side of the screen - OPEN BY DEFAULT
 */

interface Category {
  id: string;
  name: string;
  slug: string;
}

interface DosageForm {
  id: string;
  name: string;
  count: number;
}

interface Props {
  categories: Category[];
  dosageForms: DosageForm[];
  totalProducts: number;
}

const { categories, dosageForms, totalProducts } = Astro.props;
---

<!-- Backdrop (hidden by default since drawer is open) -->
<div
  id="filter-backdrop"
  class="fixed inset-0 bg-black/40 z-[60] opacity-0 pointer-events-none transition-opacity duration-300 backdrop-blur-sm"
  aria-hidden="true"
></div>

<!-- Drawer - starts OPEN, positioned on LEFT side -->
<aside
  id="filter-drawer"
  class="fixed top-0 left-0 h-full w-full max-w-xs bg-white z-[70] shadow-2xl transition-transform duration-300 ease-out flex flex-col border-r border-gray-200"
  role="dialog"
  aria-modal="true"
  aria-label="Filter products"
>
  <!-- Header with gradient accent -->
  <div class="relative">
    <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-primary to-mint-400"></div>
    <div class="flex items-center justify-between p-4 pt-5 border-b border-gray-100">
      <div class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
        </svg>
        <h2 class="text-lg font-semibold text-gray-900">Filters</h2>
      </div>
      <button
        id="close-drawer"
        type="button"
        aria-label="Close filters"
        class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Filter Content (Scrollable) -->
  <div class="flex-1 overflow-y-auto p-4 space-y-6">
    <!-- Dosage Form Filter -->
    <div>
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3 flex items-center gap-2">
        <span class="w-1 h-4 bg-primary rounded-full"></span>
        Dosage Form
      </h3>
      <div class="space-y-1">
        <label class="filter-option">
          <input
            type="radio"
            name="dosage-filter"
            value="all"
            checked
            class="filter-radio"
          />
          <span class="filter-label">All Forms</span>
          <span class="filter-count">{totalProducts}</span>
        </label>
        {dosageForms.map((form) => (
          <label class="filter-option">
            <input
              type="radio"
              name="dosage-filter"
              value={form.id}
              class="filter-radio"
            />
            <span class="filter-label">{form.name}</span>
            <span class="filter-count">{form.count}</span>
          </label>
        ))}
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-100"></div>

    <!-- Category Filter -->
    <div>
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3 flex items-center gap-2">
        <span class="w-1 h-4 bg-mint-500 rounded-full"></span>
        Category
      </h3>
      <div class="space-y-1">
        <label class="filter-option">
          <input
            type="radio"
            name="category-filter"
            value="all"
            checked
            class="filter-radio"
          />
          <span class="filter-label">All Categories</span>
        </label>
        {categories.map((category) => (
          <label class="filter-option">
            <input
              type="radio"
              name="category-filter"
              value={category.id}
              class="filter-radio"
            />
            <span class="filter-label">{category.name}</span>
          </label>
        ))}
      </div>
    </div>
  </div>

  <!-- Footer -->
  <div class="p-4 border-t border-gray-100 bg-gray-50/80">
    <!-- Product Count -->
    <div class="text-center text-sm text-gray-600 mb-3">
      Showing <span id="drawer-product-count" class="font-semibold text-primary">{totalProducts}</span> products
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-2">
      <button
        id="clear-filters"
        type="button"
        class="flex-1 px-4 py-2.5 text-gray-600 bg-white border border-gray-200 rounded-lg text-sm font-medium hover:bg-gray-50 hover:border-gray-300 transition-all focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary"
      >
        Clear All
      </button>
      <button
        id="apply-filters"
        type="button"
        class="flex-1 px-4 py-2.5 text-white bg-primary rounded-lg text-sm font-medium hover:bg-primary-dark transition-all shadow-sm hover:shadow focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
      >
        Apply
      </button>
    </div>
  </div>
</aside>

<style>
  /* Backdrop blur effect */
  #filter-backdrop {
    backdrop-filter: blur(4px);
  }

  /* Filter option row */
  .filter-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .filter-option:hover {
    background-color: #f0fef4;
  }

  .filter-option:has(.filter-radio:checked) {
    background-color: #e6fff0;
  }

  /* Custom radio button */
  .filter-radio {
    appearance: none;
    width: 1rem;
    height: 1rem;
    border: 2px solid #d1d5db;
    border-radius: 50%;
    background-color: white;
    transition: all 0.15s ease;
    flex-shrink: 0;
    cursor: pointer;
  }

  .filter-radio:hover {
    border-color: #00c16e;
  }

  .filter-radio:checked {
    border-color: #00c16e;
    background-color: #00c16e;
    box-shadow: inset 0 0 0 3px white;
  }

  .filter-radio:focus {
    outline: none;
    box-shadow: 0 0 0 2px white, 0 0 0 4px #00c16e40;
  }

  .filter-radio:focus:checked {
    box-shadow: inset 0 0 0 3px white, 0 0 0 2px white, 0 0 0 4px #00c16e40;
  }

  /* Label styling */
  .filter-label {
    flex: 1;
    font-size: 0.875rem;
    color: #374151;
    transition: color 0.15s ease;
  }

  .filter-option:hover .filter-label {
    color: #00c16e;
  }

  .filter-option:has(.filter-radio:checked) .filter-label {
    color: #00a059;
    font-weight: 500;
  }

  /* Count badge */
  .filter-count {
    font-size: 0.75rem;
    color: #9ca3af;
    background-color: #f3f4f6;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    transition: all 0.15s ease;
  }

  .filter-option:has(.filter-radio:checked) .filter-count {
    background-color: #00c16e;
    color: white;
  }

  /* Drawer closed state - slides to LEFT */
  #filter-drawer.drawer-closed {
    transform: translateX(-100%);
  }

  /* Scrollbar styling */
  #filter-drawer ::-webkit-scrollbar {
    width: 6px;
  }

  #filter-drawer ::-webkit-scrollbar-track {
    background: transparent;
  }

  #filter-drawer ::-webkit-scrollbar-thumb {
    background-color: #d1d5db;
    border-radius: 3px;
  }

  #filter-drawer ::-webkit-scrollbar-thumb:hover {
    background-color: #9ca3af;
  }
</style>

<script>
  // Elements
  const fab = document.getElementById('filter-fab');
  const badge = document.getElementById('filter-badge');
  const drawer = document.getElementById('filter-drawer');
  const backdrop = document.getElementById('filter-backdrop');
  const closeBtn = document.getElementById('close-drawer');
  const clearBtn = document.getElementById('clear-filters');
  const applyBtn = document.getElementById('apply-filters');
  const productCountEl = document.getElementById('drawer-product-count');

  const dosageRadios = document.querySelectorAll('input[name="dosage-filter"]');
  const categoryRadios = document.querySelectorAll('input[name="category-filter"]');

  const categorySections = document.querySelectorAll('section[data-category]');
  const productCards = document.querySelectorAll('article[data-product]');

  // State - drawer starts OPEN
  let currentDosage = 'all';
  let currentCategory = 'all';
  let isOpen = true;

  // Open drawer
  function openDrawer() {
    isOpen = true;
    drawer?.classList.remove('drawer-closed');
    fab?.classList.remove('sidebar-closed');
    fab?.setAttribute('aria-expanded', 'true');
    // Don't show backdrop or lock scroll for persistent sidebar feel
  }

  // Close drawer
  function closeDrawer() {
    isOpen = false;
    drawer?.classList.add('drawer-closed');
    fab?.classList.add('sidebar-closed');
    fab?.setAttribute('aria-expanded', 'false');
  }

  // Toggle drawer
  function toggleDrawer() {
    if (isOpen) {
      closeDrawer();
    } else {
      openDrawer();
    }
  }

  // Count active filters
  function updateBadge() {
    let count = 0;
    if (currentDosage !== 'all') count++;
    if (currentCategory !== 'all') count++;

    if (badge) {
      if (count > 0) {
        badge.textContent = count.toString();
        badge.classList.remove('hidden');
      } else {
        badge.classList.add('hidden');
      }
    }
  }

  // Apply filters to products
  function applyFilters() {
    let visibleCount = 0;

    // Show/hide products based on both filters
    productCards.forEach(card => {
      const cardCategory = card.getAttribute('data-category');
      const cardDosage = card.getAttribute('data-dosage');

      const matchesCategory = currentCategory === 'all' || cardCategory === currentCategory;
      const matchesDosage = currentDosage === 'all' || cardDosage === currentDosage;

      if (matchesCategory && matchesDosage) {
        (card as HTMLElement).style.display = 'grid';
        visibleCount++;
      } else {
        (card as HTMLElement).style.display = 'none';
      }
    });

    // Show/hide category sections based on visible products
    categorySections.forEach(section => {
      let hasVisibleCards = false;

      section.querySelectorAll('article[data-product]').forEach(card => {
        if ((card as HTMLElement).style.display !== 'none') {
          hasVisibleCards = true;
        }
      });

      (section as HTMLElement).style.display = hasVisibleCards ? 'block' : 'none';
    });

    // Update count with animation
    if (productCountEl) {
      productCountEl.style.transition = 'opacity 150ms ease';
      productCountEl.style.opacity = '0';
      setTimeout(() => {
        productCountEl.textContent = visibleCount.toString();
        productCountEl.style.opacity = '1';
      }, 150);
    }

    updateBadge();
  }

  // Clear all filters
  function clearFilters() {
    currentDosage = 'all';
    currentCategory = 'all';

    // Reset radio buttons
    dosageRadios.forEach(radio => {
      (radio as HTMLInputElement).checked = (radio as HTMLInputElement).value === 'all';
    });
    categoryRadios.forEach(radio => {
      (radio as HTMLInputElement).checked = (radio as HTMLInputElement).value === 'all';
    });

    applyFilters();
  }

  // Event listeners
  fab?.addEventListener('click', toggleDrawer);
  closeBtn?.addEventListener('click', closeDrawer);

  clearBtn?.addEventListener('click', clearFilters);

  applyBtn?.addEventListener('click', () => {
    applyFilters();
    // On mobile, close after applying
    if (window.innerWidth < 768) {
      closeDrawer();
    }
  });

  // Handle radio changes - apply filters immediately
  dosageRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      currentDosage = (e.target as HTMLInputElement).value;
      applyFilters();
    });
  });

  categoryRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      currentCategory = (e.target as HTMLInputElement).value;
      applyFilters();
    });
  });

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isOpen) {
      closeDrawer();
    }
  });

  // Handle window resize - reopen on desktop if closed
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 1024 && !isOpen) {
      openDrawer();
    }
  });

  // Initialize - drawer is open by default
  // Set initial aria state
  fab?.setAttribute('aria-expanded', 'true');
</script>
