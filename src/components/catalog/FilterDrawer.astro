---
/**
 * FilterDrawer Component
 * Slide-out drawer for filtering products by category, dosage form, and ingredients
 * Opens from the right side of the screen - OPEN BY DEFAULT
 */

interface Category {
  id: string;
  name: string;
  slug: string;
}

interface DosageForm {
  id: string;
  name: string;
  count: number;
}

interface Props {
  categories: Category[];
  dosageForms: DosageForm[];
  totalProducts: number;
  uniqueIngredients?: string[];
}

const { categories, dosageForms, totalProducts, uniqueIngredients = [] } = Astro.props;
---

<!-- Backdrop (hidden by default since drawer is open) -->
<div
  id="filter-backdrop"
  class="fixed inset-0 bg-black/40 z-[60] opacity-0 pointer-events-none transition-opacity duration-300 backdrop-blur-sm"
  aria-hidden="true"
></div>

<!-- Drawer - starts OPEN, positioned on LEFT side -->
<aside
  id="filter-drawer"
  class="fixed top-0 left-0 h-full w-full max-w-xs bg-white z-[70] shadow-2xl transition-transform duration-300 ease-out flex flex-col border-r border-gray-200"
  role="dialog"
  aria-modal="true"
  aria-label="Filter products"
>
  <!-- Header with gradient accent -->
  <div class="relative">
    <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-primary to-mint-400"></div>
    <div class="flex items-center justify-between p-4 pt-5 border-b border-gray-100">
      <div class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
        </svg>
        <h2 class="text-lg font-semibold text-gray-900">Filters</h2>
      </div>
      <button
        id="close-drawer"
        type="button"
        aria-label="Close filters"
        class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Filter Content (Scrollable) -->
  <div class="flex-1 overflow-y-auto p-4 space-y-6">
    <!-- Ingredient/SKU Search Filter -->
    <div>
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3 flex items-center gap-2">
        <span class="w-1 h-4 bg-emerald-500 rounded-full"></span>
        Search by SKU or Ingredient
      </h3>
      <div class="relative">
        <input
          type="text"
          id="ingredient-search"
          placeholder="SKU (e.g. DUR-C001) or ingredient..."
          autocomplete="off"
          class="w-full px-3 py-2 text-sm border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary transition-all"
        />
        <svg xmlns="http://www.w3.org/2000/svg" class="absolute right-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <!-- Autocomplete Dropdown -->
        <div
          id="ingredient-suggestions"
          class="hidden absolute z-20 left-0 right-0 mt-1 bg-white border border-gray-200 rounded-lg shadow-lg max-h-48 overflow-y-auto"
        ></div>
      </div>
      <!-- Selected Ingredients (chips) -->
      <div id="selected-ingredients" class="flex flex-wrap gap-1.5 mt-2"></div>
      <!-- Match Mode Toggle -->
      <label class="flex items-center gap-2 mt-2 text-xs text-gray-500 cursor-pointer hover:text-gray-700 transition-colors">
        <input type="checkbox" id="match-all-ingredients" class="w-3.5 h-3.5 rounded border-gray-300 text-primary focus:ring-primary/30" />
        <span>Require ALL selected ingredients</span>
      </label>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-100"></div>

    <!-- Dosage Form Filter -->
    <div>
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3 flex items-center gap-2">
        <span class="w-1 h-4 bg-primary rounded-full"></span>
        Dosage Form
      </h3>
      <div class="space-y-1">
        <label class="filter-option">
          <input
            type="radio"
            name="dosage-filter"
            value="all"
            checked
            class="filter-radio"
          />
          <span class="filter-label">All Forms</span>
          <span class="filter-count">{totalProducts}</span>
        </label>
        {dosageForms.map((form) => (
          <label class="filter-option">
            <input
              type="radio"
              name="dosage-filter"
              value={form.id}
              class="filter-radio"
            />
            <span class="filter-label">{form.name}</span>
            <span class="filter-count">{form.count}</span>
          </label>
        ))}
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-100"></div>

    <!-- Category Filter -->
    <div>
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3 flex items-center gap-2">
        <span class="w-1 h-4 bg-mint-500 rounded-full"></span>
        Category
      </h3>
      <div class="space-y-1">
        <label class="filter-option">
          <input
            type="radio"
            name="category-filter"
            value="all"
            checked
            class="filter-radio"
          />
          <span class="filter-label">All Categories</span>
        </label>
        {categories.map((category) => (
          <label class="filter-option">
            <input
              type="radio"
              name="category-filter"
              value={category.id}
              class="filter-radio"
            />
            <span class="filter-label">{category.name}</span>
          </label>
        ))}
      </div>
    </div>
  </div>

  <!-- Footer -->
  <div class="p-4 border-t border-gray-100 bg-gray-50/80">
    <!-- Product Count -->
    <div class="text-center text-sm text-gray-600 mb-3">
      Showing <span id="drawer-product-count" class="font-semibold text-primary">{totalProducts}</span> products
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-2">
      <button
        id="clear-filters"
        type="button"
        class="flex-1 px-4 py-2.5 text-gray-600 bg-white border border-gray-200 rounded-lg text-sm font-medium hover:bg-gray-50 hover:border-gray-300 transition-all focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary"
      >
        Clear All
      </button>
      <button
        id="apply-filters"
        type="button"
        class="flex-1 px-4 py-2.5 text-white bg-primary rounded-lg text-sm font-medium hover:bg-primary-dark transition-all shadow-sm hover:shadow focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
      >
        Apply
      </button>
    </div>
  </div>
</aside>

<style>
  /* Backdrop blur effect */
  #filter-backdrop {
    backdrop-filter: blur(4px);
  }

  /* Filter option row */
  .filter-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .filter-option:hover {
    background-color: #f0fef4;
  }

  .filter-option:has(.filter-radio:checked) {
    background-color: #e6fff0;
  }

  /* Custom radio button */
  .filter-radio {
    appearance: none;
    width: 1rem;
    height: 1rem;
    border: 2px solid #d1d5db;
    border-radius: 50%;
    background-color: white;
    transition: all 0.15s ease;
    flex-shrink: 0;
    cursor: pointer;
  }

  .filter-radio:hover {
    border-color: #00c16e;
  }

  .filter-radio:checked {
    border-color: #00c16e;
    background-color: #00c16e;
    box-shadow: inset 0 0 0 3px white;
  }

  .filter-radio:focus {
    outline: none;
    box-shadow: 0 0 0 2px white, 0 0 0 4px #00c16e40;
  }

  .filter-radio:focus:checked {
    box-shadow: inset 0 0 0 3px white, 0 0 0 2px white, 0 0 0 4px #00c16e40;
  }

  /* Label styling */
  .filter-label {
    flex: 1;
    font-size: 0.875rem;
    color: #374151;
    transition: color 0.15s ease;
  }

  .filter-option:hover .filter-label {
    color: #00c16e;
  }

  .filter-option:has(.filter-radio:checked) .filter-label {
    color: #00a059;
    font-weight: 500;
  }

  /* Count badge */
  .filter-count {
    font-size: 0.75rem;
    color: #9ca3af;
    background-color: #f3f4f6;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    transition: all 0.15s ease;
  }

  .filter-option:has(.filter-radio:checked) .filter-count {
    background-color: #00c16e;
    color: white;
  }

  /* Drawer closed state - slides to LEFT */
  #filter-drawer.drawer-closed {
    transform: translateX(-100%);
  }

  /* Scrollbar styling */
  #filter-drawer ::-webkit-scrollbar {
    width: 6px;
  }

  #filter-drawer ::-webkit-scrollbar-track {
    background: transparent;
  }

  #filter-drawer ::-webkit-scrollbar-thumb {
    background-color: #d1d5db;
    border-radius: 3px;
  }

  #filter-drawer ::-webkit-scrollbar-thumb:hover {
    background-color: #9ca3af;
  }

  /* Ingredient chip styles */
  .ingredient-chip {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    background-color: #e6fff0;
    border: 1px solid #00c16e;
    border-radius: 9999px;
    font-size: 0.75rem;
    color: #00a059;
    font-weight: 500;
  }

  .ingredient-chip button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: transparent;
    border: none;
    color: #00a059;
    cursor: pointer;
    transition: background-color 0.15s ease;
  }

  .ingredient-chip button:hover {
    background-color: #00c16e;
    color: white;
  }

  /* Autocomplete suggestion styles */
  .suggestion-item {
    padding: 0.5rem 0.75rem;
    cursor: pointer;
    font-size: 0.875rem;
    color: #374151;
    transition: background-color 0.1s ease;
  }

  .suggestion-item:hover,
  .suggestion-item.active {
    background-color: #f0fef4;
    color: #00a059;
  }

  .suggestion-item .match {
    font-weight: 600;
    color: #00c16e;
  }
</style>

<!-- Inject ingredients data for client-side filtering -->
<script define:vars={{ uniqueIngredients }}>
  window.catalogIngredients = uniqueIngredients;
</script>

<script>
  // Declare window property for TypeScript
  declare global {
    interface Window {
      catalogIngredients: string[];
    }
  }

  // Elements
  const fab = document.getElementById('filter-fab');
  const badge = document.getElementById('filter-badge');
  const drawer = document.getElementById('filter-drawer');
  const backdrop = document.getElementById('filter-backdrop');
  const closeBtn = document.getElementById('close-drawer');
  const clearBtn = document.getElementById('clear-filters');
  const applyBtn = document.getElementById('apply-filters');
  const productCountEl = document.getElementById('drawer-product-count');

  // Ingredient search elements
  const ingredientSearch = document.getElementById('ingredient-search') as HTMLInputElement;
  const ingredientSuggestions = document.getElementById('ingredient-suggestions');
  const selectedIngredientsContainer = document.getElementById('selected-ingredients');
  const matchAllCheckbox = document.getElementById('match-all-ingredients') as HTMLInputElement;

  const dosageRadios = document.querySelectorAll('input[name="dosage-filter"]');
  const categoryRadios = document.querySelectorAll('input[name="category-filter"]');

  // UI state only - filter state managed by CatalogFilterState
  let isOpen = true;
  let activeSuggestionIndex = -1;

  // Get available ingredients from injected data (for autocomplete suggestions)
  const availableIngredients: string[] = window.catalogIngredients || [];

  // Open drawer
  function openDrawer() {
    isOpen = true;
    drawer?.classList.remove('drawer-closed');
    fab?.classList.remove('sidebar-closed');
    fab?.setAttribute('aria-expanded', 'true');
  }

  // Close drawer
  function closeDrawer() {
    isOpen = false;
    drawer?.classList.add('drawer-closed');
    fab?.classList.add('sidebar-closed');
    fab?.setAttribute('aria-expanded', 'false');
  }

  // Toggle drawer
  function toggleDrawer() {
    if (isOpen) {
      closeDrawer();
    } else {
      openDrawer();
    }
  }

  // Update badge based on centralized filter state
  function updateBadge(activeFilterCount: number) {
    if (badge) {
      if (activeFilterCount > 0) {
        badge.textContent = activeFilterCount.toString();
        badge.classList.remove('hidden');
      } else {
        badge.classList.add('hidden');
      }
    }
  }

  // Render selected ingredient chips from centralized state
  function renderSelectedIngredients() {
    if (!selectedIngredientsContainer) return;

    const ingredients = window.catalogFilterState.getActiveFilters().ingredients;

    selectedIngredientsContainer.innerHTML = ingredients.map(ing => `
      <span class="ingredient-chip">
        ${ing}
        <button type="button" data-ingredient="${ing}" aria-label="Remove ${ing}">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </span>
    `).join('');

    // Add clear all button if multiple ingredients selected
    if (ingredients.length >= 2) {
      selectedIngredientsContainer.innerHTML += `
        <button type="button" id="clear-ingredients" class="text-xs text-gray-500 hover:text-primary underline ml-1">
          Clear all
        </button>
      `;
      document.getElementById('clear-ingredients')?.addEventListener('click', () => {
        window.catalogFilterState.clearIngredients();
      });
    }

    // Add remove handlers
    selectedIngredientsContainer.querySelectorAll('.ingredient-chip button').forEach(btn => {
      btn.addEventListener('click', () => {
        const ing = btn.getAttribute('data-ingredient');
        if (ing) {
          window.catalogFilterState.removeIngredient(ing);
        }
      });
    });
  }

  // Show ingredient suggestions
  function showSuggestions(query: string) {
    if (!ingredientSuggestions || query.length < 2) {
      hideSuggestions();
      return;
    }

    const lowerQuery = query.toLowerCase();
    const currentIngredients = window.catalogFilterState.getActiveFilters().ingredients;
    const matches = availableIngredients
      .filter(ing =>
        ing.toLowerCase().includes(lowerQuery) &&
        !currentIngredients.includes(ing)
      )
      .slice(0, 8);

    if (matches.length === 0) {
      hideSuggestions();
      return;
    }

    activeSuggestionIndex = -1;
    ingredientSuggestions.innerHTML = matches.map((ing, idx) => {
      // Highlight matching portion
      const lowerIng = ing.toLowerCase();
      const matchStart = lowerIng.indexOf(lowerQuery);
      const before = ing.slice(0, matchStart);
      const match = ing.slice(matchStart, matchStart + query.length);
      const after = ing.slice(matchStart + query.length);
      return `<div class="suggestion-item" data-index="${idx}" data-ingredient="${ing}">${before}<span class="match">${match}</span>${after}</div>`;
    }).join('');

    ingredientSuggestions.classList.remove('hidden');

    // Add click handlers
    ingredientSuggestions.querySelectorAll('.suggestion-item').forEach(item => {
      item.addEventListener('click', () => {
        const ing = item.getAttribute('data-ingredient');
        if (ing) selectIngredient(ing);
      });
    });
  }

  // Hide suggestions dropdown
  function hideSuggestions() {
    if (ingredientSuggestions) {
      ingredientSuggestions.classList.add('hidden');
      ingredientSuggestions.innerHTML = '';
    }
    activeSuggestionIndex = -1;
  }

  // Select an ingredient via centralized state
  function selectIngredient(ingredient: string) {
    window.catalogFilterState.addIngredient(ingredient);
    if (ingredientSearch) ingredientSearch.value = '';
    hideSuggestions();
  }

  // Clear all filters via centralized state
  function clearFilters() {
    // Clear centralized state (this will emit event and update DOM)
    window.catalogFilterState.clearAll();

    // Reset UI elements to match cleared state
    dosageRadios.forEach(radio => {
      (radio as HTMLInputElement).checked = (radio as HTMLInputElement).value === 'all';
    });
    categoryRadios.forEach(radio => {
      (radio as HTMLInputElement).checked = (radio as HTMLInputElement).value === 'all';
    });

    // Reset ingredient search
    if (ingredientSearch) ingredientSearch.value = '';
    if (matchAllCheckbox) matchAllCheckbox.checked = false;
  }

  // Event listeners for drawer
  fab?.addEventListener('click', toggleDrawer);
  closeBtn?.addEventListener('click', closeDrawer);
  clearBtn?.addEventListener('click', clearFilters);

  // Apply button - just close drawer on mobile (filters apply automatically)
  applyBtn?.addEventListener('click', () => {
    if (window.innerWidth < 768) {
      closeDrawer();
    }
  });

  // Ingredient search input handlers
  ingredientSearch?.addEventListener('input', (e) => {
    const query = (e.target as HTMLInputElement).value;
    showSuggestions(query);
  });

  ingredientSearch?.addEventListener('keydown', (e) => {
    const suggestions = ingredientSuggestions?.querySelectorAll('.suggestion-item');
    if (!suggestions || suggestions.length === 0) return;

    if (e.key === 'ArrowDown') {
      e.preventDefault();
      activeSuggestionIndex = Math.min(activeSuggestionIndex + 1, suggestions.length - 1);
      updateActiveSuggestion(suggestions);
    } else if (e.key === 'ArrowUp') {
      e.preventDefault();
      activeSuggestionIndex = Math.max(activeSuggestionIndex - 1, 0);
      updateActiveSuggestion(suggestions);
    } else if (e.key === 'Enter') {
      e.preventDefault();
      if (activeSuggestionIndex >= 0 && activeSuggestionIndex < suggestions.length) {
        const ing = suggestions[activeSuggestionIndex].getAttribute('data-ingredient');
        if (ing) selectIngredient(ing);
      }
    } else if (e.key === 'Escape') {
      hideSuggestions();
    }
  });

  function updateActiveSuggestion(suggestions: NodeListOf<Element>) {
    suggestions.forEach((s, i) => {
      s.classList.toggle('active', i === activeSuggestionIndex);
    });
  }

  // Close suggestions when clicking outside
  document.addEventListener('click', (e) => {
    if (!ingredientSearch?.contains(e.target as Node) && !ingredientSuggestions?.contains(e.target as Node)) {
      hideSuggestions();
    }
  });

  // Match mode toggle - use centralized state
  matchAllCheckbox?.addEventListener('change', () => {
    window.catalogFilterState.setMatchAllIngredients(matchAllCheckbox.checked);
  });

  // Handle radio changes - use centralized state
  dosageRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      window.catalogFilterState.setDosageForm((e.target as HTMLInputElement).value);
    });
  });

  categoryRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      window.catalogFilterState.setCategory((e.target as HTMLInputElement).value);
    });
  });

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isOpen) {
      closeDrawer();
    }
  });

  // Handle window resize
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 1024 && !isOpen) {
      openDrawer();
    }
  });

  // Listen for centralized filter state changes and update UI
  window.addEventListener('catalogFiltersChanged', (e: Event) => {
    const event = e as CustomEvent;
    const { visibleCount, filters } = event.detail;

    // Update product count with animation
    if (productCountEl) {
      productCountEl.style.transition = 'opacity 150ms ease';
      productCountEl.style.opacity = '0';
      setTimeout(() => {
        productCountEl.textContent = visibleCount.toString();
        productCountEl.style.opacity = '1';
      }, 150);
    }

    // Update badge
    updateBadge(filters.activeFilterCount);

    // Re-render ingredient chips
    renderSelectedIngredients();

    // Sync match all checkbox
    if (matchAllCheckbox) {
      matchAllCheckbox.checked = filters.matchAllIngredients;
    }
  });

  // Initialize
  fab?.setAttribute('aria-expanded', 'true');
</script>
