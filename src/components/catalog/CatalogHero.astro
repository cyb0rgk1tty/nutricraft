---
import ScrollAnimation from '../ScrollAnimation.astro';
import SearchBar from './SearchBar.astro';
---

<section class="bg-gradient-to-b from-mint-50 to-white py-12 md:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <ScrollAnimation animation="fade-up">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-dark-900 mb-4">
        Stock Formula Catalog
      </h1>
      <p class="text-lg md:text-xl text-dark-600 max-w-2xl mx-auto mb-8">
        Browse our collection of ready-to-brand supplement formulas. Each formula is GMP-certified and available for private label or white label manufacturing.
      </p>

      <!-- Search Bar -->
      <div class="mt-6">
        <SearchBar />
        <p class="text-sm text-gray-500 mt-3">
          <kbd class="px-2 py-1 bg-gray-100 rounded text-xs font-mono">/</kbd> or
          <kbd class="px-2 py-1 bg-gray-100 rounded text-xs font-mono">Ctrl+K</kbd> to search
        </p>
      </div>

      <!-- Custom Formula Notice -->
      <p class="text-sm text-gray-600 mt-5">
        Don't see what you're looking for? We can
        <a href="/contact" class="text-primary hover:underline font-medium">create a custom formula</a>
        just for your brand.
      </p>
    </ScrollAnimation>
  </div>
</section>
